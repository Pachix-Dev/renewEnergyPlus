---
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");

const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<Layout title='RE+ MEXICO | nosotros'>
  <!-- Hero Section -->
  <section
    class='relative bg-gradient-to-br from-[#5E5884] to-[#7B6FA8] text-white py-20 overflow-hidden'
  >
    <!-- Elementos decorativos -->
    <div class='absolute inset-0 overflow-hidden'>
      <div
        class='absolute top-20 right-20 w-32 h-32 border-2 border-white/10 rounded-full animate-pulse'
      >
      </div>
      <div
        class='absolute bottom-20 left-20 w-24 h-24 border border-white/10 rounded-full animate-bounce'
      >
      </div>
      <div
        class='absolute top-1/2 right-32 w-16 h-16 bg-white/5 rounded-full blur-xl'
      >
      </div>
    </div>

    <div class='container mx-auto px-4 relative z-10'>
      <div
        class='text-center max-w-4xl mx-auto'
        data-aos='fade-down'
        data-aos-duration='1000'
      >
        <h1 class='text-4xl lg:text-6xl font-black mb-6 leading-tight'>
          {t('AboutSSM.title')}
        </h1>
        <div
          class='w-32 h-1 bg-gradient-to-r from-white to-orange-300 mx-auto rounded-full'
        >
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class='py-20 bg-gradient-to-b from-gray-50 to-white'>
    <div class='container mx-auto px-4'>
      <div class='grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto'>
        <!-- Content Card -->
        <div
          class='order-2 lg:order-1'
          data-aos='fade-right'
          data-aos-duration='1000'
        >
          <div
            class='bg-white rounded-3xl shadow-2xl p-8 lg:p-12 border border-gray-100 relative overflow-hidden'
          >
            <!-- Elemento decorativo en el card -->
            <div
              class='absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-[#5E5884]/5 to-[#7B6FA8]/5 rounded-full -translate-y-16 translate-x-16'
            >
            </div>

            <div class='relative z-10'>
              <!-- Descripción principal -->
              <div class='mb-8'>
                <div class='flex items-center gap-3 mb-6'>
                  <div
                    class='w-12 h-12 bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] rounded-xl flex items-center justify-center'
                  >
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      class='h-6 w-6 text-white'
                      fill='none'
                      viewBox='0 0 24 24'
                      stroke='currentColor'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M13 10V3L4 14h7v7l9-11h-7z'></path>
                    </svg>
                  </div>
                  <h2 class='text-2xl font-bold text-gray-800'>
                    {
                      i18next.language === 'es'
                        ? 'Nuestra Misión'
                        : 'Our Mission'
                    }
                  </h2>
                </div>
                <div
                  class='prose prose-lg text-gray-700 leading-relaxed'
                  set:html={t('AboutSSM.description')}
                />
              </div>

              <!-- Destacado especial -->
              <div
                class='bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] rounded-2xl p-8 text-white relative overflow-hidden'
              >
                <!-- Elementos decorativos internos -->
                <div
                  class='absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10'
                >
                </div>
                <div
                  class='absolute bottom-0 left-0 w-16 h-16 bg-white/5 rounded-full translate-y-8 -translate-x-8'
                >
                </div>

                <div class='relative z-10'>
                  <div class='flex items-center gap-3 mb-4'>
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      class='h-8 w-8 text-orange-300'
                      fill='none'
                      viewBox='0 0 24 24'
                      stroke='currentColor'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z'
                      ></path>
                    </svg>
                    <div
                      class='text-lg font-semibold leading-relaxed'
                      set:html={t('AboutSSM.description2')}
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Image Section -->
        <div
          class='order-1 lg:order-2'
          data-aos='fade-left'
          data-aos-duration='1000'
        >
          <div class='relative'>
            <!-- Elemento decorativo detrás de la imagen -->
            <div
              class='absolute inset-0 bg-gradient-to-br from-[#5E5884] to-[#7B6FA8] rounded-3xl transform rotate-6 scale-105 opacity-10'
            >
            </div>

            <!-- Imagen principal -->
            <div
              class='relative bg-white rounded-3xl shadow-2xl overflow-hidden border-4 border-white'
            >
              <img
                src='/img/gallery/2025/galeria7.webp'
                alt='RE+ México - Evento de Energías Renovables'
                class='w-full h-[600px] object-cover hover:scale-105 transition-transform duration-700'
              />

              <!-- Overlay con información -->
              <div
                class='absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent flex items-end'
              >
                <div class='p-8 text-white'>
                  <h3 class='text-2xl font-bold mb-2'>RE+ MEXICO 2025</h3>
                  <p class='text-white/90'>
                    {t('home.slogan')}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class='py-20 bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] text-white'
  >
    <div class='container mx-auto px-4 text-center'>
      <div
        class='max-w-4xl mx-auto'
        data-aos='fade-up'
        data-aos-duration='1000'
      >
        <h2 class='text-3xl lg:text-4xl font-bold mb-6'>
          {
            i18next.language === 'es'
              ? '¿Listo para ser parte del futuro energético?'
              : 'Ready to be part of the energy future?'
          }
        </h2>
        <p class='text-xl mb-10 text-white/90'>
          {
            i18next.language === 'es'
              ? 'Únete a la comunidad líder en energías renovables de México y América Latina'
              : 'Join the leading renewable energy community in Mexico and Latin America'
          }
        </p>

        <div class='flex flex-col sm:flex-row gap-6 justify-center'>
          <a
            href={`${base}/registro`}
            class='inline-flex items-center gap-3 px-8 py-4 bg-white hover:bg-gray-100 text-[#5E5884] font-bold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-5 w-5'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z'
              ></path>
            </svg>
            {t('home.free_register')}
          </a>

          <a
            href={`${base}/programa-premium`}
            class='inline-flex items-center gap-3 px-8 py-4 bg-transparent hover:bg-white/10 text-white border-2 border-white hover:border-white/80 font-bold rounded-xl transition-all duration-300'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-5 w-5'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z'
              ></path>
            </svg>
            <span class='font-bold'>
              {t('program.title_1')}
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
