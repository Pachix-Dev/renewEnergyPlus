---
import Layout from "../../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";
import ListDirectory from "../../components/directorio-digital/ListDirectory";

changeLanguage("en");

const currentLanguage = i18next.language;
---

<Layout title={t('home.digital_directory')}>
  <!-- tÃ­tulo -->
  <p class='text-3xl text-center font-bold uppercase mt-10 mb-4'>
    {t('home.digital_directory')}
  </p>

  <!-- lista de expositores -->
  <div class='relative flex flex-col md:flex-row'>
    <ListDirectory currentLanguage={currentLanguage} client:only='react' />

    <div class='mt-10 flex flex-row justify-center gap-5'>
      <section
        class='container mx-auto px-4 py-10 relative md:grid md:grid-flow-col gap-10'
      >
        <div class='relative w-96'>
          <div class='sticky top-0'>
            <a href='https://www.made-in-china.com/' target='_blank'>
              <img
                src='/img/banners/banner_directorio_digital.webp'
                alt='Banner'
                class='w-11/12 mx-auto'
              />
            </a>
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>
