---
import Layout from "../../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";
import { sponsors } from "../../data/constanst_logos.js";
import MarqueeSponsors from "../../components/register/MarqueeSponsors.astro";
import ProgramaEscenario from "../../components/shared/ProgramaEscenario.astro";
import { ProgramaEscenarioClient } from "../../components/shared/ProgramaEscenarioClient";

changeLanguage("en");

const API_URL = import.meta.env.DEV
    ? "http://localhost:3000"
    : "https://dashboard.igeco.mx";
const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<Layout title="RE+ MEXICO | programa premium">
  <!-- Video de fondo mejorado -->
  <div class="relative min-h-screen overflow-hidden">
    <video
      src="/video/bg_program_vip_720p.mp4"
      autoplay
      loop
      muted
      playsinline
      class="absolute inset-0 w-full h-full object-cover"></video>

    <!-- Overlay con gradiente -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-[#1E293B]/80 via-[#1E293B]/60 to-[#5E5884]/80"
    >
    </div>

    <!-- Elementos decorativos flotantes -->
    <div class="absolute inset-0 overflow-hidden">
      <div
        class="absolute top-20 left-20 w-32 h-32 border-2 border-white/10 rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-32 right-32 w-24 h-24 border-2 border-[#5E5884]/30 rounded-full animate-bounce"
      >
      </div>
      <div
        class="absolute top-1/3 right-20 w-16 h-16 bg-[#5E5884]/20 rounded-full blur-xl animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-1/4 left-32 w-20 h-20 border border-white/10 rotate-45 animate-spin-slow"
      >
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="relative z-10 min-h-screen flex flex-col">
      <!-- Header Section -->
      <div
        class="container mx-auto px-4 pt-32 pb-16 flex-1 flex flex-col justify-center"
      >
        <!-- Main Title -->
        <div
          class="text-center mb-16"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          <h1
            class="text-5xl sm:text-6xl lg:text-7xl font-black text-white mb-6 leading-tight"
            data-aos="zoom-in" data-aos-duration="1200" data-aos-delay="100"
          >
            <span
              class="block text-3xl sm:text-4xl font-bold text-[#ffffff] mb-4 filter drop-shadow-lg"
            >
              RE+ MEXICO
            </span>
            <span class="">
              {t("program.title_content_premium")}
            </span>
          </h1>
          <div
            class="w-32 h-1 bg-gradient-to-r from-[#5E5884] to-white mx-auto rounded-full"
          >
          </div>

          <!-- Tarjetas de contenido experiencia premium -->
          <div
            class="mt-12 grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-5xl mx-auto"
          >
            <!-- Tarjeta: Conferencias Premium -->
            <div
              class="premium-card-v2 group flex flex-col items-center text-center rounded-2xl bg-gradient-to-br from-[#1E293B]/80 via-[#5E5884]/60 to-[#1E293B]/80 border-2 border-[#5E5884] shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-400 p-0 overflow-hidden"
              data-aos="fade-up" data-aos-duration="900" data-aos-delay="100"
            >
              <div class="w-full flex justify-center -mt-8">
                <div
                  class="premium-img-circle bg-white/10 border-4 border-[#5E5884] rounded-full p-2 shadow-lg mt-6 z-10"
                >
                  <div
                    class="relative w-[140px] h-[140px] sm:w-[180px] sm:h-[180px] md:w-[220px] md:h-[220px] lg:w-[260px] lg:h-[260px] flex items-center justify-center rounded-full bg-gradient-to-br from-[#5E5884]/80 via-[#1E293B]/60 to-[#5E5884]/40"
                  >
                    <img
                      src="/img/conferencias_premium.webp"
                      alt="Conferencias Premium"
                      class="w-[110px] h-[110px] sm:w-[150px] sm:h-[150px] md:w-[180px] md:h-[180px] lg:w-[220px] lg:h-[220px] object-cover rounded-full border-4 border-white shadow-md"
                    />
                  </div>
                </div>
              </div>
              <div
                class="flex flex-col sm:justify-start items-center px-6 p-5 pt-10 pb-8"
              >
                <h3
                  class="sm:text-xl font-extrabold text-white mb-2 tracking-wide drop-shadow-lg uppercase"
                >
                  {t("program.item_premium_1")}
                </h3>
              </div>
            </div>
            <!-- Tarjeta: VIP Area de Networking -->
            <div
              class="premium-card-v2 group flex flex-col items-center text-center rounded-2xl bg-gradient-to-br from-[#1E293B]/80 via-[#5E5884]/60 to-[#1E293B]/80 border-2 border-[#5E5884] shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-400 p-0 overflow-hidden"
              data-aos="fade-up" data-aos-duration="900" data-aos-delay="200"
            >
              <div class="w-full flex justify-center -mt-8">
                <div
                  class="premium-img-circle bg-white/10 border-4 border-[#5E5884] rounded-full p-2 shadow-lg mt-6 z-10"
                >
                  <div
                    class="relative w-[140px] h-[140px] sm:w-[180px] sm:h-[180px] md:w-[220px] md:h-[220px] lg:w-[260px] lg:h-[260px] flex items-center justify-center rounded-full bg-gradient-to-br from-[#5E5884]/80 via-[#1E293B]/60 to-[#5E5884]/40"
                  >
                    <img
                      src="/img/vip_area.webp"
                      alt="Conferencias Premium"
                      class="w-[110px] h-[110px] sm:w-[150px] sm:h-[150px] md:w-[180px] md:h-[180px] lg:w-[220px] lg:h-[220px] object-cover rounded-full border-4 border-white shadow-md"
                    />
                  </div>
                </div>
              </div>
              <div
                class="flex-1 flex flex-col justify-start items-center px-6 p-5 pt-10 pb-8"
              >
                <h3
                  class="sm:text-xl font-extrabold text-white mb-2 tracking-wide drop-shadow-lg uppercase"
                >
                  {t("program.item_premium_2")}
                </h3>
              </div>
            </div>
            <!-- Tarjeta: Energy Night -->
            <div
              class="premium-card-v2 group flex flex-col items-center text-center rounded-2xl bg-gradient-to-br from-[#1E293B]/80 via-[#5E5884]/60 to-[#1E293B]/80 border-2 border-[#5E5884] shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-400 p-0 overflow-hidden"
              data-aos="fade-up" data-aos-duration="900" data-aos-delay="300"
            >
              <div class="w-full flex justify-center -mt-8">
                <div
                  class="premium-img-circle bg-white/10 border-4 border-[#5E5884] rounded-full p-2 shadow-lg mt-6 z-10"
                >
                  <div
                    class="relative w-[140px] h-[140px] sm:w-[180px] sm:h-[180px] md:w-[220px] md:h-[220px] lg:w-[260px] lg:h-[260px] flex items-center justify-center rounded-full bg-gradient-to-br from-[#5E5884]/80 via-[#1E293B]/60 to-[#5E5884]/40"
                  >
                    <img
                      src="/img/energy_night.webp"
                      alt="Conferencias Premium"
                      class="w-[110px] h-[110px] sm:w-[150px] sm:h-[150px] md:w-[180px] md:h-[180px] lg:w-[220px] lg:h-[220px] object-cover rounded-full border-4 border-white shadow-md"
                    />
                  </div>
                </div>
              </div>
              <div
                class="flex-1 flex flex-col justify-start items-center px-6 p-5 pt-10 pb-8"
              >
                <h3
                  class="sm:text-xl font-extrabold text-white mb-2 tracking-wide drop-shadow-lg uppercase"
                  set:html={t("program.item_premium_3")}
                />
              </div>
            </div>
            <!-- Tarjeta: Sunset Cocktail -->
            <div
              class="premium-card-v2 group flex flex-col items-center text-center rounded-2xl bg-gradient-to-br from-[#1E293B]/80 via-[#5E5884]/60 to-[#1E293B]/80 border-2 border-[#5E5884] shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-400 p-0 overflow-hidden"
              data-aos="fade-up" data-aos-duration="900" data-aos-delay="400"
            >
              <div class="w-full flex justify-center -mt-8">
                <div
                  class="premium-img-circle bg-white/10 border-4 border-[#5E5884] rounded-full p-2 shadow-lg mt-6 z-10"
                >
                  <div
                    class="relative w-[140px] h-[140px] sm:w-[180px] sm:h-[180px] md:w-[220px] md:h-[220px] lg:w-[260px] lg:h-[260px] flex items-center justify-center rounded-full bg-gradient-to-br from-[#5E5884]/80 via-[#1E293B]/60 to-[#5E5884]/40"
                  >
                    <img
                      src="/img/sunset_cocktail.webp"
                      alt="Conferencias Premium"
                      class="w-[110px] h-[110px] sm:w-[150px] sm:h-[150px] md:w-[180px] md:h-[180px] lg:w-[220px] lg:h-[220px] object-cover rounded-full border-4 border-white shadow-md"
                    />
                  </div>
                </div>
              </div>
              <div
                class="flex-1 flex flex-col justify-start items-center px-6 p-5 pt-10 pb-8"
              >
                <h3
                  class="sm:text-xl font-extrabold text-white mb-2 tracking-wide drop-shadow-lg uppercase"
                >
                  {t("program.item_premium_4")}
                </h3>
              </div>
            </div>
          </div>

          <!-- Boton de venta de pases premium -->
          <div class="flex justify-center mt-14">
            <a
              href={`${base}/programa-premium-productos`}
              class="inline-flex items-center gap-4 px-8 sm:px-12 py-5 sm:text-2xl font-extrabold rounded-full shadow-xl border-4 border-yellow-400 bg-gradient-to-r from-yellow-400 via-[#5E5884] to-[#1E293B] text-white tracking-wider transition-all duration-300 hover:scale-105 hover:shadow-yellow-400/40 focus:outline-none focus:ring-4 focus:ring-yellow-300/40"
            >
              <span class="uppercase tracking-wider drop-shadow-lg"
                >{t("program.button2")}</span
              >
              <svg
                version="1.1"
                id="Uploaded to svgrepo.com"
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                width="26px"
                height="26px"
                viewBox="0 0 32 32"
                xml:space="preserve"
                fill="#000000"
                ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
                  id="SVGRepo_tracerCarrier"
                  stroke-linecap="round"
                  stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
                  <style type="text/css">
                    .puchipuchi_een {
                      fill: #ffffff;
                    }
                  </style>
                  <path
                    class="puchipuchi_een"
                    d="M20.414,26.414l9-9c0.781-0.781,0.781-2.047,0-2.828l-9-9c-0.781-0.781-2.047-0.781-2.828,0 s-0.781,2.047,0,2.828L23.172,14H4c-1.104,0-2,0.896-2,2s0.896,2,2,2h19.172l-5.586,5.586c-0.781,0.781-0.781,2.047,0,2.828 S19.633,27.195,20.414,26.414z"
                  ></path>
                </g></svg
              >
            </a>
          </div>
          <p
            data-aos="fade-up"
            data-aos-duration="1000"
            class="text-white text-xl text-center py-10"
          >
            {
              i18next.language === "es"
                ? "Mantente pendiente de la agenda de conferencias y descubre las tendencias que están transformando el panorama energético."
                : "Stay tuned for the conference schedule and discover the trends that are transforming the energy landscape."
            }
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- Render dinámico en cliente para datos vivos -->
  <ProgramaEscenarioClient
    client:load
    apiUrl={API_URL}
    language={i18next.language}
    escenarioIndex={0}
  />
</Layout>
<style>
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  /* Mejoras en las sombras de texto */
  h1 {
    text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.8);
  }

  /* Efectos de glassmorphism mejorados */
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
  }

  /* Animaciones personalizadas para los elementos decorativos */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Responsive improvements */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    /* Ajustes para móviles en ejes temáticos */
    .grid.lg\\:grid-cols-4 {
      grid-template-columns: 1fr;
    }

    .grid.md\\:grid-cols-2 {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 1024px) {
    .grid.lg\\:grid-cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .modern-card {
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    background: rgba(94, 88, 132, 0.15);
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    position: relative;
    overflow: hidden;
  }

  .modern-card:hover {
    box-shadow: 0 16px 48px 0 rgba(31, 38, 135, 0.28);
    background: rgba(94, 88, 132, 0.25);
    transform: translateY(-6px) scale(1.04);
  }

  .icon-circle {
    transition: transform 0.3s;
    box-shadow: 0 4px 16px 0 rgba(94, 88, 132, 0.25);
  }

  .img-card {
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    background: rgba(30, 41, 59, 0.15);
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    min-height: 340px;
  }
  .img-card:hover {
    box-shadow: 0 16px 48px 0 rgba(31, 38, 135, 0.28);
    background: rgba(94, 88, 132, 0.25);
    transform: translateY(-6px) scale(1.04);
  }
  .img-card-img {
    width: 100%;
    height: 12rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #5e5884 0%, #1e293b 100%);
    overflow: hidden;
  }
  @media (min-width: 640px) {
    .img-card-img {
      height: 14rem;
    }
  }
  .img-card-content {
    width: 100%;
    padding: 1.5rem 1.5rem;
    background: linear-gradient(
      to bottom,
      rgba(30, 41, 59, 0.7) 0%,
      rgba(94, 88, 132, 0.6) 70%,
      transparent 100%
    );
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1 1 0%;
  }
  .card-modern {
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    background: rgba(30, 41, 59, 0.1);
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    min-height: 340px;
  }
  .card-modern:hover {
    box-shadow: 0 16px 48px 0 rgba(31, 38, 135, 0.28);
    background: rgba(94, 88, 132, 0.18);
    transform: translateY(-6px) scale(1.04);
  }
  .card-img {
    width: 100%;
    height: 11rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #5e5884 0%, #1e293b 100%);
    overflow: hidden;
    position: relative;
  }
  @media (min-width: 640px) {
    .card-img {
      height: 14rem;
    }
  }

  .premium-card-v2 {
    background: linear-gradient(
      135deg,
      #1e293bcc 0%,
      #5e588499 60%,
      #1e293bcc 100%
    );
    border-radius: 1.25rem;
    border: 2px solid #5e5884;
    box-shadow:
      0 8px 32px 0 rgba(94, 88, 132, 0.18),
      0 0 24px 0 #5e5884aa;
    transition:
      box-shadow 0.4s,
      transform 0.4s;
    overflow: hidden;
    /* min-height eliminado para responsividad */
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 0;
  }
  .premium-card-v2:hover {
    box-shadow:
      0 20px 60px 0 #5e5884cc,
      0 0 32px 0 #1e293bcc;
    background: linear-gradient(
      135deg,
      #5e5884cc 0%,
      #1e293b99 60%,
      #1e293bcc 100%
    );
    transform: translateY(-8px) scale(1.04);
  }
  .premium-img-circle {
    box-shadow: 0 4px 24px 0 #5e5884aa;
    border-radius: 9999px;
    background: rgba(30, 41, 59, 0.25);
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      box-shadow 0.3s,
      border 0.3s;
  }
</style>
