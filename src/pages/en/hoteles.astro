---
import { t, changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import Recinto from "../../components/hotel/Recinto.astro";
import TarifasHoteles from "../../components/hotel/TarifasHoteles.astro";

changeLanguage("en");
---

<Layout title="RE+ MEXICO | Hoteles">
  <div class="container mx-auto">
    <TarifasHoteles />
    <Recinto />
    <section class="container mx-auto mt-16 mb-16 px-6 md:px-12 lg:px-20">
      <div class="max-w-6xl mx-auto space-y-12">
        <!-- Acerca de Guadalajara -->
        <div
          class="bg-gradient-to-br from-gray-50 to-white p-8 rounded-2xl shadow-lg border border-gray-100"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
          data-aos-anchor-placement="top-center"
        >
          <div class="flex items-center gap-3 mb-4">
            <div
              class="w-1 h-8 bg-gradient-to-b from-[#565078] to-[#fc913f] rounded-full"
            >
            </div>
            <h2 class="font-extrabold text-2xl md:text-3xl text-[#565078]">
              {t("hotels.about_gdl")}
            </h2>
          </div>
          <p
            class="text-base md:text-lg text-gray-700 leading-relaxed"
            set:html={t("hotels.description_gdl")}
          />
        </div>
      </div>
    </section>
    <!-- <p class='mt-3 mx-12 md:text-justify text-center my-10'>{t('program.comming_soon')}</p> -->
  </div>
</Layout>
