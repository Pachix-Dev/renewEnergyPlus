---
import Recinto from "../../components/hotel/Recinto.astro";
import Profile from "../../components/Profile.astro";
import Layout from "../../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("en");

const lang = i18next.language;
const base = lang === "es" ? "" : `/${lang}`;
---

<Layout title='RE+ Mexico | por que visitar'>
  <!-- Hero Section -->
  <section class='relative overflow-hidden'>
    <div class='bg-gradient-to-br from-gray-50 via-gray-100 to-gray-200'>
      <div class='container mx-auto px-4 py-16'>
        <div
          class='text-center mb-12'
          data-aos='fade-up'
          data-aos-duration='1000'
        >
          <h1
            class='text-5xl lg:text-6xl font-bold text-gray-800 mb-6 leading-tight'
          >
            {t('whyasist.title')}
          </h1>
          <div
            class='w-24 h-1 bg-gradient-to-r from-[#BC0100] to-[#D76901] mx-auto rounded-full'
          >
          </div>
        </div>

        <div class='grid lg:grid-cols-2 gap-12 items-center'>
          <div
            class='space-y-6'
            data-aos='fade-right'
            data-aos-duration='1200'
            data-aos-delay='200'
          >
            <div class='prose prose-lg text-gray-600 leading-relaxed'>
              <p set:html={t('WhyVisit.description')} />
            </div>
            <div
              class='flex gap-4'
              data-aos='fade-up'
              data-aos-duration='800'
              data-aos-delay='400'
            >
              <a href={`${base}/registro`} class='button'>
                <span>{t('home.free_register')}</span>
                <svg
                  class='icon'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
                </svg>
              </a>
            </div>
          </div>
          <div
            class='relative'
            data-aos='fade-left'
            data-aos-duration='1200'
            data-aos-delay='200'
          >
            <div
              class='absolute -inset-4 bg-gradient-to-r from-[#BC0100] to-[#D76901] rounded-2xl blur opacity-20'
            >
            </div>
            <img
              class='relative rounded-2xl shadow-2xl object-cover w-full h-96'
              src='/img/bgWhyvisitnew.webp'
              alt='RE+ Mexico Event'
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class='py-20 bg-white'>
