          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Visitor Profile Section -->
  <section class='py-20 bg-gradient-to-br from-gray-50 to-gray-100'>
    <div class='container mx-auto px-4'>
      <div
        class='text-center mb-16'
        data-aos='fade-up'
        data-aos-duration='1000'
      >
        <h2
          class='text-4xl font-bold text-gray-800 mb-6'
          set:html={t('home.title-visitor-profile')}
        />
        <div
          class='w-24 h-1 bg-gradient-to-r from-[#BC0100] to-[#D76901] mx-auto rounded-full'
        >
        </div>
      </div>

      <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto'>
        <div data-aos='fade-up' data-aos-duration='600' data-aos-delay='100'>
          <Profile text='home.visitor-profile.item_1' />
        </div>
        <div data-aos='fade-up' data-aos-duration='600' data-aos-delay='200'>
          <Profile text='home.visitor-profile.item_5' />
        </div>
        <div data-aos='fade-up' data-aos-duration='600' data-aos-delay='300'>
          <Profile text='home.visitor-profile.item_9' />
        </div>
        <div data-aos='fade-up' data-aos-duration='600' data-aos-delay='400'>
