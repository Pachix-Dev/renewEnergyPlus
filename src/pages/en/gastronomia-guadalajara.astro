---
import { restaurants, gastronomiaGurmet, gastronomiaLocal, } from "../../data/directorio_turistico";
import PlaceCard from "../../components/hotel/PlaceCard.astro";
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title="RE+ México | Gastronomía en Guadalajara ">
  <!-- Hero Section -->
  <section
    class="relative overflow-hidden bg-gradient-to-br from-purple-50 via-orange-50 to-white py-10 md:py-20"
    data-aos="fade-down"
    data-aos-duration="2000"
    data-aos-delay="200"
    data-aos-anchor-placement="top-center"
  >
    <!-- Decorative Background Elements -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-orange-200/20 rounded-full blur-3xl -z-10"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-96 h-96 bg-purple-200/20 rounded-full blur-3xl -z-10"
    >
    </div>

    <div class="container mx-auto px-6 md:px-12 lg:px-20">
      <div class="max-w-5xl mx-auto text-center mb-20">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-3 mb-8 bg-white/90 backdrop-blur-md px-6 py-3 rounded-full border border-orange-200/50 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            fill="currentColor"
            class="w-8 h-8 text-[#fc913f]"
          >
            <path
              d="M416 0C400 0 288 32 288 176V288c0 35.3 28.7 64 64 64h32V480c0 17.7 14.3 32 32 32s32-14.3 32-32V352 240 32c0-17.7-14.3-32-32-32zM64 16C64 7.8 57.9 1 49.7 .1S34.2 4.6 32.4 12.5L2.1 148.8C.7 155.1 0 161.5 0 167.9c0 45.9 35.1 83.6 80 87.7V480c0 17.7 14.3 32 32 32s32-14.3 32-32V255.6c44.9-4.1 80-41.8 80-87.7c0-6.4-.7-12.8-2.1-19.1L191.6 12.5c-1.8-8-9.3-13.3-17.4-12.4S160 7.8 160 16V150.2c0 5.4-4.4 9.8-9.8 9.8c-5.1 0-9.3-3.9-9.8-9L127.9 14.6C127.2 6.3 120.3 0 112 0s-15.2 6.3-15.9 14.6L83.7 151c-.5 5.1-4.7 9-9.8 9c-5.4 0-9.8-4.4-9.8-9.8V16zm48.3 152l-.3 0-.3 0 .3-.7 .3 .7z"
            ></path>
          </svg>
        </div>

        <!-- Title -->
        <h2
          class="font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight uppercase"
        >
          {t("hotels.restaurants")}
        </h2>

        <!-- Divider -->
        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-8"
        >
        </div>

        <!-- Description Card -->
        <div
          class="bg-white/90 backdrop-blur-md p-8 md:p-10 lg:p-12 rounded-3xl shadow-2xl border border-gray-100/50 hover:shadow-3xl transition-all duration-500 hover:scale-[1.02] hover:border-orange-200/50"
        >
          <div
            class="prose prose-xl max-w-none text-gray-700 leading-relaxed [&>p]:mb-0 [&>p]:text-lg md:[&>p]:text-xl"
            set:html={t("hotels.restaurants_desc")}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Sections Container -->
  <section
    class="bg-gradient-to-b from-white via-purple-50/30 to-orange-50/30 py-16"
  >
    <div class="container mx-auto px-6 md:px-12 lg:px-20">
      <!-- Restaurantes cercanos -->
      <section class="mb-24 bg-white/60 backdrop-blur-sm p-8 md:p-12 rounded-3xl shadow-lg border border-purple-100/50" data-aos="fade-up" data-aos-duration="1000">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2
            class="font-black text-3xl md:text-4xl lg:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight uppercase tracking-tight"
          >
            Opciones Gastronómicas Cercanas a Expo Guadalajara
          </h2>

          <div
            class="h-1.5 w-20 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto"
          >
          </div>
        </div>
        <PlaceCard places={restaurants} />
      </section>

      <!-- Gastronomía Local -->
      <section
        class="mb-24 bg-gradient-to-br from-orange-50/80 to-white/60 backdrop-blur-sm p-8 md:p-12 rounded-3xl shadow-lg border border-orange-100/50"
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="100"
      >
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2
            class="font-black text-3xl md:text-4xl lg:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#fc913f] mb-6 leading-tight uppercase tracking-tight"
          >
            Gastronomía Local
          </h2>

          <p class="text-gray-600 text-lg md:text-xl mb-6 max-w-2xl mx-auto">
            Descubre los auténticos sabores de Guadalajara
          </p>

          <div
            class="h-1.5 w-20 bg-gradient-to-r from-[#fc913f] to-[#565078] rounded-full mx-auto"
          >
          </div>
        </div>
        <PlaceCard places={gastronomiaLocal} />
      </section>

      <!-- Gastronomía Gourmet -->
      <section
        class="mb-16 bg-gradient-to-br from-purple-50/80 to-white/60 backdrop-blur-sm p-8 md:p-12 rounded-3xl shadow-lg border border-purple-100/50"
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="200"
      >
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2
            class="font-black text-3xl md:text-4xl lg:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-[#6a5f8e] to-[#fc913f] mb-6 leading-tight uppercase tracking-tight"
          >
            Gastronomía Gourmet
          </h2>

          <p class="text-gray-600 text-lg md:text-xl mb-6 max-w-2xl mx-auto">
            Experiencias culinarias de alta cocina
          </p>

          <div
            class="h-1.5 w-20 bg-gradient-to-r from-[#6a5f8e] to-[#fc913f] rounded-full mx-auto"
          >
          </div>
        </div>
        <PlaceCard places={gastronomiaGurmet} />
      </section>
    </div>
  </section>
</Layout>
