---
import { parques } from "../../data/directorio_turistico";
import { restaurants } from "../../data/directorio_turistico";
import PlaceCard from "../../components/hotel/PlaceCard.astro";
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title="RE+ México | Gastronomía en Guadalajara ">
  <!-- Restaurantes -->
  <section
      class="container mx-auto px-6 md:px-12 lg:px-20 py-16 bg-gradient-to-br from-purple-50 via-orange-50 to-white"
      data-aos="fade-down"
      data-aos-duration="2000"
      data-aos-delay="200"
      data-aos-anchor-placement="top-center"
    >
      <div class="max-w-4xl mx-auto text-center mb-16">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 mb-6 bg-gradient-to-r  px-5 py-2.5 rounded-full border border-orange-200 shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            fill="currentColor"
            class="w-7 h-7 text-[#fc913f]"
          >
            <path
              d="M416 0C400 0 288 32 288 176V288c0 35.3 28.7 64 64 64h32V480c0 17.7 14.3 32 32 32s32-14.3 32-32V352 240 32c0-17.7-14.3-32-32-32zM64 16C64 7.8 57.9 1 49.7 .1S34.2 4.6 32.4 12.5L2.1 148.8C.7 155.1 0 161.5 0 167.9c0 45.9 35.1 83.6 80 87.7V480c0 17.7 14.3 32 32 32s32-14.3 32-32V255.6c44.9-4.1 80-41.8 80-87.7c0-6.4-.7-12.8-2.1-19.1L191.6 12.5c-1.8-8-9.3-13.3-17.4-12.4S160 7.8 160 16V150.2c0 5.4-4.4 9.8-9.8 9.8c-5.1 0-9.3-3.9-9.8-9L127.9 14.6C127.2 6.3 120.3 0 112 0s-15.2 6.3-15.9 14.6L83.7 151c-.5 5.1-4.7 9-9.8 9c-5.4 0-9.8-4.4-9.8-9.8V16zm48.3 152l-.3 0-.3 0 .3-.7 .3 .7z"
            ></path>
          </svg>
        </div>

        <!-- Title -->
        <h2
          class="font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight uppercase"
        >
          {t("hotels.restaurants")}
        </h2>

        <!-- Divider -->
        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-8"
        >
        </div>

        <!-- Description Card -->
        <div
          class="bg-white/80 backdrop-blur-sm p-6 md:p-8 rounded-3xl shadow-xl border border-gray-100/50 hover:shadow-2xl transition-all duration-500 hover:scale-[1.02]"
        >
          <div
            class="prose prose-lg max-w-none text-gray-700 leading-relaxed [&>p]:mb-0"
            set:html={t("hotels.restaurants_desc")}
          />
        </div>
      </div>
      <PlaceCard places={restaurants} />
    </section>
  </section>
</Layout>
