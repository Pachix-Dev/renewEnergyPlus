---
import Layout from '../layouts/Layout.astro';
import i18next, { t } from 'i18next';
---

<Layout title='Renew Energy Plus'>
	<section>
		<div class='flex fixed z-[-100] w-full'>
			<img src='/img/bgExhibitorProfile2.webp' alt=''  />
			<img src='/img/bgExhibitorProfile.webp' alt='' />
		</div>
		<p class='bg-[#EFEFEF] mt-10 py-14 px-20'>
			<i>SOLAR + STORAGE MEXICO</i>
			<br />
			<strong class='text-3xl'>Perfil del expositor</strong>
		</p>
		<p
			class='bg-white text-justify form-label py-10 px-20'
			set:html={t('ExhibitorProfile.description')}
		/>
		<div class='flex text-sm'>
			<div class='w-[51%] bg-[#EFEFEF]'>
				<p
					class=' text-justify form-label py-10 px-10'
					set:html={t('ExhibitorProfile.description2')}
				/>
			</div>
			<div class='w-1/2'></div>
		</div>
    <div class='flex'>
      <div class='w-1/2'></div>
			<div class='w-[51%] bg-[#EFEFEF]'>
				<p
					class=' text-justify form-label py-10 px-10'
					set:html={t('ExhibitorProfile.description3')}
				/>
			</div>
			
		</div>
	</section>
</Layout>
