---
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";
import { program_premium } from "../data/constans_program_premium";
import { Program } from "../components/shared/Program.jsx";
import { sponsors } from "../data/constanst_logos.js";
import MarqueeSponsors from "../components/register/MarqueeSponsors.astro";

changeLanguage("es");

const translate = t("program", { returnObjects: true });
const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<Layout title='RE+ Mexico | programa premium'>
  <!-- Video de fondo mejorado -->
  <div class='relative min-h-screen overflow-hidden'>
    <video
      src='/video/bg_program_vip_720p.mp4'
      autoplay
      loop
      muted
      playsinline
      class='absolute inset-0 w-full h-full object-cover'></video>

    <!-- Overlay con gradiente -->
    <div
      class='absolute inset-0 bg-gradient-to-b from-[#1E293B]/80 via-[#1E293B]/60 to-[#5E5884]/80'
    >
    </div>

    <!-- Elementos decorativos flotantes -->
    <div class='absolute inset-0 overflow-hidden'>
      <div
        class='absolute top-20 left-20 w-32 h-32 border-2 border-white/10 rounded-full animate-pulse'
      >
      </div>
      <div
        class='absolute bottom-32 right-32 w-24 h-24 border-2 border-[#5E5884]/30 rounded-full animate-bounce'
      >
      </div>
      <div
        class='absolute top-1/3 right-20 w-16 h-16 bg-[#5E5884]/20 rounded-full blur-xl animate-pulse'
      >
      </div>
      <div
        class='absolute bottom-1/4 left-32 w-20 h-20 border border-white/10 rotate-45 animate-spin-slow'
      >
      </div>
    </div>

    <!-- Contenido principal -->
    <div class='relative z-10 min-h-screen flex flex-col'>
      <!-- Header Section -->
      <div
        class='container mx-auto px-4 pt-32 pb-16 flex-1 flex flex-col justify-center'
      >
        <!-- Main Title -->
        <div
          class='text-center mb-16'
          data-aos='fade-up'
          data-aos-duration='1000'
          data-aos-delay='200'
        >
          <h1
            class='text-5xl sm:text-6xl lg:text-7xl font-black text-white mb-6 leading-tight'
          >
            <span
              class='block text-3xl sm:text-4xl font-bold text-[#5E5884] mb-4 filter drop-shadow-lg'
            >
              RE+ MÉXICO
            </span>
            <span class=''>
              {t('program.title_1')}
            </span>
          </h1>
          <div
            class='w-32 h-1 bg-gradient-to-r from-[#5E5884] to-white mx-auto rounded-full'
          >
          </div>
        </div>

        <!-- Features Section -->
        <div class='py-20'>
          <div class='container mx-auto px-4'>
            <div
              class='grid md:grid-cols-3 gap-8 max-w-6xl mx-auto'
              data-aos='fade-up'
              data-aos-duration='1000'
              data-aos-delay='800'
            >
              <div class='text-center'>
                <div
                  class='w-16 h-16 bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] rounded-2xl flex items-center justify-center mx-auto mb-4'
                >
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='h-8 w-8 text-white'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7'
                    ></path>
                  </svg>
                </div>
                <h3 class='text-xl font-bold text-white mb-2'>
                  {
                    i18next.language === 'es'
                      ? 'Acceso Exclusivo'
                      : 'Exclusive Access'
                  }
                </h3>
                <p class='text-white/70'>
                  {
                    i18next.language === 'es'
                      ? 'Contenido premium y experiencias únicas'
                      : 'Premium content and unique experiences'
                  }
                </p>
              </div>

              <div class='text-center'>
                <div
                  class='w-16 h-16 bg-gradient-to-r from-[#1E293B] to-[#374151] rounded-2xl flex items-center justify-center mx-auto mb-4'
                >
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='h-8 w-8 text-white'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'
                    ></path>
                  </svg>
                </div>
                <h3 class='text-xl font-bold text-white mb-2'>
                  Networking VIP
                </h3>
                <p class='text-white/70'>
                  {
                    i18next.language === 'es'
                      ? 'Conecta con líderes de la industria'
                      : 'Connect with industry leaders'
                  }
                </p>
              </div>

              <div class='text-center'>
                <div
                  class='w-16 h-16 bg-gradient-to-r from-[#5E5884] to-[#1E293B] rounded-2xl flex items-center justify-center mx-auto mb-4'
                >
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='h-8 w-8 text-white'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
                    ></path>
                  </svg>
                </div>
                <h3 class='text-xl font-bold text-white mb-2'>
                  {i18next.language === 'es' ? 'Innovación' : 'Innovation'}
                </h3>
                <p class='text-white/70'>
                  {
                    i18next.language === 'es'
                      ? 'Las últimas tendencias y tecnologías'
                      : 'The latest trends and technologies'
                  }
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Button -->
        <div
          class='text-center'
          data-aos='zoom-in'
          data-aos-duration='1000'
          data-aos-delay='600'
        >
          <a
            href={`${base}/programa-premium-productos`}
            class='group relative inline-flex items-center gap-4 px-12 py-6 bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] text-white rounded-2xl font-bold text-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl overflow-hidden border-2 border-white/20'
          >
            <!-- Efecto de brillo -->
            <div
              class='absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000'
            >
            </div>

            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6 relative z-10'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z'
              ></path>
            </svg>

            <span class='relative z-10 uppercase tracking-wider'>
              {t('program.button2')}
            </span>

            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6 relative z-10 group-hover:translate-x-2 transition-transform duration-300'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
            </svg>
          </a>
        </div>

        <!-- Coming Soon Badge -->
        <div
          class='text-center my-12'
          data-aos='fade-down'
          data-aos-duration='1000'
        >
          <div class='inline-block'>
            <div
              class='bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] text-white px-8 py-4 rounded-full border-2 border-white/20 backdrop-blur-sm shadow-2xl'
            >
              <div class='flex items-center gap-3'>
                <div class='w-3 h-3 bg-white rounded-full animate-pulse'></div>
                <span class='text-xl font-bold uppercase tracking-wider'>
                  {t('program.comming_soon')}
                </span>
                <div class='w-3 h-3 bg-white rounded-full animate-pulse'></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  /* Mejoras en las sombras de texto */
  h1 {
    text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.8);
  }

  /* Efectos de glassmorphism mejorados */
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
  }

  /* Animaciones personalizadas para los elementos decorativos */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Responsive improvements */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
