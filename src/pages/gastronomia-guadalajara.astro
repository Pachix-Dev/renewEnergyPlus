---
import { parques } from "../data/directorio_turistico";
import { restaurants } from "../data/directorio_turistico";
import PlaceCard from "../components/hotel/PlaceCard.astro";
import Layout from "../layouts/Layout.astro";
import { t } from "i18next";
---

<Layout title="Gastronomía en Guadalajara | RE+ México">
  <section class="container mx-auto px-6 md:px-12 lg:px-20 my-10">
    <!-- Restaurantes -->
    <section
      class="py-10 bg-gradient-to-br from-gray-200 to-white"
      data-aos="fade-down"
      data-aos-duration="2000"
      data-aos-delay="200"
      data-aos-anchor-placement="top-center"
    >
      <div class="max-w-4xl mx-auto text-center mb-16">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 mb-6 bg-gradient-to-r from-orange-50 to-orange-100 px-5 py-2.5 rounded-full border border-orange-200 shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            fill="currentColor"
            class="w-7 h-7 text-[#fc913f]"
          >
            <path
              d="M416 0C400 0 288 32 288 176V288c0 35.3 28.7 64 64 64h32V480c0 17.7 14.3 32 32 32s32-14.3 32-32V352 240 32c0-17.7-14.3-32-32-32zM64 16C64 7.8 57.9 1 49.7 .1S34.2 4.6 32.4 12.5L2.1 148.8C.7 155.1 0 161.5 0 167.9c0 45.9 35.1 83.6 80 87.7V480c0 17.7 14.3 32 32 32s32-14.3 32-32V255.6c44.9-4.1 80-41.8 80-87.7c0-6.4-.7-12.8-2.1-19.1L191.6 12.5c-1.8-8-9.3-13.3-17.4-12.4S160 7.8 160 16V150.2c0 5.4-4.4 9.8-9.8 9.8c-5.1 0-9.3-3.9-9.8-9L127.9 14.6C127.2 6.3 120.3 0 112 0s-15.2 6.3-15.9 14.6L83.7 151c-.5 5.1-4.7 9-9.8 9c-5.4 0-9.8-4.4-9.8-9.8V16zm48.3 152l-.3 0-.3 0 .3-.7 .3 .7z"
            ></path>
          </svg>
        </div>

        <!-- Title -->
        <h2
          class="font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight"
        >
          {t("hotels.restaurants")}
        </h2>

        <!-- Divider -->
        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto"
        >
        </div>
      </div>
      <PlaceCard places={restaurants} />
    </section>
    <!-- Entretenimiento -->
    <section
      id="entertainment"
      class="py-10 bg-gradient-to-br from-gray-50 to-white space-y-12"
      data-aos="fade-up"
      data-aos-duration="3000"
      data-aos-delay="200"
      data-aos-anchor-placement="top-center"
    >
      <div class="max-w-4xl mx-auto text-center mb-16">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 mb-6 bg-gradient-to-r from-purple-50 to-purple-100 px-5 py-2.5 rounded-full border border-purple-200 shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 640 512"
            fill="currentColor"
            class="w-7 h-7 text-[#565078]"
          >
            <path
              d="M560 160A80 80 0 1 0 560 0a80 80 0 1 0 0 160zM55.9 512H381.1h75H578.9c33.8 0 61.1-27.4 61.1-61.1c0-11.2-3.1-22.2-8.9-31.8l-132-216.3C495 196.1 487.8 192 480 192s-15 4.1-19.1 10.7l-48.2 79L286.8 81c-6.6-10.6-18.3-17-30.8-17s-24.1 6.4-30.8 17L8.6 426.4C3 435.3 0 445.6 0 456.1C0 487 25 512 55.9 512z"
            ></path>
          </svg>
        </div>

        <!-- Title -->
        <h2
          class="font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight"
        >
          {t("hotels.entertainment")}
        </h2>

        <!-- Divider -->
        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-8"
        >
        </div>

        <!-- Description Card -->
        <div
          class="bg-white/80 backdrop-blur-sm p-6 md:p-8 rounded-3xl shadow-xl border border-gray-100/50 hover:shadow-2xl transition-all duration-500 hover:scale-[1.02]"
        >
          <div
            class="prose prose-lg max-w-none text-gray-700 leading-relaxed [&>p]:mb-0"
            set:html={t("hotels.entertainment_desc")}
          />
        </div>
      </div>
      <PlaceCard places={parques} />
    </section>
    <!-- Moneda -->
    <div
      class="bg-gradient-to-br from-amber-50 to-white p-8 rounded-2xl shadow-lg border border-amber-100"
      data-aos="fade-up"
      data-aos-duration="2000"
      data-aos-delay="300"
      data-aos-anchor-placement="top-center"
    >
      <div class="flex items-center gap-3 mb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width={2}
          stroke="currentColor"
          class="w-8 h-8 text-[#fc913f]"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <h2 class="font-extrabold text-2xl md:text-3xl text-[#565078]">
          {t("hotels.money")}
        </h2>
      </div>
      <p
        class="text-base md:text-lg text-gray-700 leading-relaxed mb-6"
        set:html={t("hotels.money_desc")}
      />
      <a
        href="https://www.xe.com/currencyconverter/convert/?Amount=1&From=USD&To=MXN"
        target="_blank"
        class="inline-flex items-center gap-2 px-6 py-3 text-base font-semibold text-white bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width={2}
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5"
          ></path>
        </svg>
        {t("hotels.link_currency")}
      </a>
    </div>
  </section>
</Layout>
