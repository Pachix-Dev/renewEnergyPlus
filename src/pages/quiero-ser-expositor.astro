---
import Content from "../components/Content.astro";
import Segmentos from "../components/home/Segmentos.astro";
import Tariffs from "../components/Tariffs.astro";
import Layout from "../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Layout title='RE+ Mexico | quiero ser expositor'>
  <!-- Hero Section Mejorado -->
  <section
    class='relative bg-gradient-to-br from-gray-50 via-white to-gray-100 py-20'
  >
    <div class='container mx-auto px-4'>
      <div class='bg-white rounded-3xl shadow-2xl overflow-hidden'>
        <!-- Header con gradiente -->
        <div
          class='bg-gradient-to-r from-[#766EA6] to-[#565078] p-8 text-white text-center'
        >
          <h1 class='text-5xl font-bold mb-4'>
            <span class='italic'>RE+ MEXICO</span>
          </h1>
          <div
            class='w-24 h-1 bg-gradient-to-r from-orange-400 to-orange-600 mx-auto rounded-full'
          >
          </div>
        </div>

        <!-- Contenido principal -->
        <div class='flex flex-col lg:flex-row gap-8 p-8 lg:p-12'>
          <div
            class='lg:w-3/5 space-y-6'
            data-aos='fade-right'
            data-aos-duration='1000'
          >
            <h2 class='text-4xl font-bold text-gray-800 leading-tight'>
              {t('whyexhibit.why')}
            </h2>
            <div class='prose prose-lg text-gray-600 leading-relaxed'>
              <p set:html={t('whyexhibit.description_main')} />
            </div>
            <Content />
          </div>

          <div class='lg:w-2/5' data-aos='fade-left' data-aos-duration='1000'>
            <div class='relative'>
              <div
                class='absolute -inset-4 bg-gradient-to-r from-orange-400 to-red-600 rounded-2xl blur opacity-20'
              >
              </div>
              <img
                src='/img/gallery/2025/expositorx.jpg'
                alt='Re+ México perfil expositor'
                class='relative w-full h-80 lg:h-96 object-cover rounded-2xl shadow-2xl'
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

