---
import LayoutCheckout from "../layouts/LayoutCheckout.astro";
import { CheckoutForm } from "../components/ecommerce/CheckoutForm.jsx";
import { Resume } from "../components/ecommerce/Resume.jsx";
import { Total } from "../components/ecommerce/Total.jsx";
import i18next, { changeLanguage, t } from "i18next";
import { RedirectREPLUS } from "../components/ecommerce/RedirectREPLUS";

changeLanguage("es");

const currentLanguage = i18next.language;
const ecommerceTranslations = t("ecommerce", { returnObjects: true });
---

<LayoutCheckout title='Re+ Mexico | Programa Premium Checkout'>
  <main
    class='min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-100'
  >
    <!-- Header con breadcrumb -->
    <div
      class='bg-[#1E293B] border-b border-gray-200 sticky top-0 z-[120] shadow-sm'
    >
      <div class='container mx-auto px-4 py-4'>
        <div class='flex items-center justify-between'>
          <!-- Logo y título -->
          <div class='flex items-center gap-4'>
            <img
              src='/img/logoREPLUS.webp'
              alt='REPLUS MEXICO'
              class='h-12 w-auto drop-shadow-md'
            />
            <div>
              <h1 class='text-sm md:text-2xl font-bold text-white'>
                {t('ecommerce.description')}
              </h1>
              <p class='text-sm text-gray-200'>
                {t('ecommerce.checkout_subtitle')}
              </p>
            </div>
          </div>

          <!-- Indicador de paso -->
          <div
            class='hidden md:flex items-center gap-2 bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] px-4 py-2 rounded-full text-white'
          >
            <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
              <path
                fill-rule='evenodd'
                d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
                clip-rule='evenodd'></path>
            </svg>
            <span class='font-semibold text-sm'>
              {t('ecommerce.step_checkout') || 'Paso 2 de 2'}
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Contenido principal -->
    <div class='container mx-auto px-4 py-8'>
      <div class='grid lg:grid-cols-3 gap-8 max-w-7xl mx-auto'>
        <!-- Formulario de checkout -->
        <section class='lg:col-span-2 order-2 lg:order-1'>
          <!-- Header de la sección -->

          <!-- Formulario -->

          <CheckoutForm
            currentLanguage={currentLanguage}
            translates={ecommerceTranslations}
            client:only
          />

          <!-- Información de seguridad -->
          <div
            class='mt-6 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl p-6 border border-green-200'
          >
            <div class='flex items-center gap-4'>
              <div
                class='flex-shrink-0 w-10 h-10 bg-green-500 rounded-full flex items-center justify-center'
              >
                <svg
                  class='w-5 h-5 text-white'
                  fill='currentColor'
                  viewBox='0 0 20 20'
                >
                  <path
                    fill-rule='evenodd'
                    d='M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z'
                    clip-rule='evenodd'></path>
                </svg>
              </div>
              <div class='flex-1'>
                <h3 class='font-semibold text-green-800 mb-2'>
                  {t('ecommerce.secure_title') || 'Compra 100% Segura'}
                </h3>
                <p class='text-sm text-green-700 leading-relaxed'>
                  {
                    t('ecommerce.secure_description') ||
                      'Utilizamos encriptación SSL de 256 bits y procesamos pagos a través de plataformas certificadas. Tu información está completamente protegida.'
                  }
                </p>
                <div class='flex items-center gap-4 mt-3'>
                  <div class='flex items-center gap-1'>
                    <svg
                      class='w-4 h-4 text-green-600'
                      fill='currentColor'
                      viewBox='0 0 20 20'
                    >
                      <path
                        fill-rule='evenodd'
                        d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
                        clip-rule='evenodd'></path>
                    </svg>
                    <span class='text-xs font-medium text-green-700'
                      >{t('ecommerce.ssl_certified')}</span
                    >
                  </div>
                  <div class='flex items-center gap-1'>
                    <svg
                      class='w-4 h-4 text-green-600'
                      fill='currentColor'
                      viewBox='0 0 20 20'
                    >
                      <path
                        fill-rule='evenodd'
                        d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
                        clip-rule='evenodd'></path>
                    </svg>
                    <span class='text-xs font-medium text-green-700'
                      >{t('ecommerce.encrypted_data')}</span
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Sidebar con resumen -->
        <aside class='lg:col-span-1 order-1 lg:order-2'>
          <div class='lg:sticky lg:top-24'>
            <!-- Resumen del pedido -->
            <div
              class='bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden mb-6'
            >
              <!-- Header del resumen -->
              <div
                class='bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] px-6 py-6 text-white'
              >
                <div class='flex items-center gap-3'>
                  <div
                    class='w-8 h-8 bg-white/20 rounded-full flex items-center justify-center'
                  >
                    <svg
                      class='w-4 h-4'
                      fill='currentColor'
                      viewBox='0 0 20 20'
                    >
                      <path
                        fill-rule='evenodd'
                        d='M10 2L3 7v11a1 1 0 001 1h3a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h3a1 1 0 001-1V7l-7-5z'
                        clip-rule='evenodd'></path>
                    </svg>
                  </div>
                  <h2 class='text-lg font-bold'>
                    {t('ecommerce.resume')}
                  </h2>
                </div>
              </div>

              <!-- Contenido del resumen -->
              <div class='p-6'>
                <Resume client:only currentLanguage={currentLanguage} />
              </div>
            </div>

            <!-- Total y botón de pago -->

            <div>
              <Total client:only />
            </div>

            <!-- Información adicional -->
            <div class='mt-6 space-y-4'>
              <!-- Métodos de pago aceptados -->
              <div class='bg-gray-50 rounded-xl p-4 border border-gray-200'>
                <h4
                  class='font-semibold text-gray-800 mb-3 flex items-center gap-2'
                >
                  <svg
                    class='w-5 h-5 text-gray-600'
                    fill='none'
                    stroke='currentColor'
                    viewBox='0 0 24 24'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z'
                    ></path>
                  </svg>
                  {t('ecommerce.payment_methods') || 'Métodos de Pago'}
                </h4>
                <div class='grid grid-cols-2 gap-2'>
                  <div
                    class='bg-white p-2 rounded-lg border border-gray-200 flex items-center justify-center'
                  >
                    <span class='text-xs font-medium text-gray-700'>Visa</span>
                  </div>
                  <div
                    class='bg-white p-2 rounded-lg border border-gray-200 flex items-center justify-center'
                  >
                    <span class='text-xs font-medium text-gray-700'
                      >Mastercard</span
                    >
                  </div>
                  <div
                    class='bg-white p-2 rounded-lg border border-gray-200 flex items-center justify-center'
                  >
                    <span class='text-xs font-medium text-gray-700'>PayPal</span
                    >
                  </div>
                  <div
                    class='bg-white p-2 rounded-lg border border-gray-200 flex items-center justify-center'
                  >
                    <span class='text-xs font-medium text-gray-700'>AMEX</span>
                  </div>
                </div>
              </div>

              <!-- Soporte -->
              <div class='bg-blue-50 rounded-xl p-4 border border-blue-200'>
                <h4
                  class='font-semibold text-blue-800 mb-2 flex items-center gap-2'
                >
                  <svg
                    class='w-5 h-5 text-blue-600'
                    fill='none'
                    stroke='currentColor'
                    viewBox='0 0 24 24'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 11-9.75 9.75 9.75 9.75 0 019.75-9.75z'
                    ></path>
                  </svg>
                  {t('ecommerce.need_help') || '¿Necesitas ayuda?'}
                </h4>
                <p class='text-sm text-blue-700 mb-3'>
                  {
                    t('ecommerce.support_description') ||
                      'Nuestro equipo está disponible para asistirte'
                  }
                </p>
                <a
                  href='https://wa.me/5578618859?text=Hola%2C%20necesito%20ayuda%20con%20mi%20compra%20en%20RE%2B%20MEXICO.'
                  target='_blank'
                  class='inline-flex items-center gap-2 text-sm font-medium text-blue-800 hover:text-blue-900 transition-colors'
                >
                  <svg
                    role='img'
                    viewBox='0 0 24 24'
                    class='w-4 h-4'
                    xmlns='http://www.w3.org/2000/svg'
                    ><title>WhatsApp</title><path
                      d='M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z'
                    ></path></svg
                  >

                  5578618859
                </a>
              </div>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>
</LayoutCheckout>
