---
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";
import { Program } from "../components/shared/Program";
import ProgramPadre from "../components/programa2026/ProgramPadre.astro";

changeLanguage("es");

const translate = t("workshops", { returnObjects: true });
const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<Layout title="RE+ MEXICO | Talleres y Capacitaciones">
  <!-- Hero Section con video de fondo -->
  <div class="relative min-h-screen overflow-hidden">
    <video
      src="/video/bg_program_vip_720p.mp4"
      autoplay
      loop
      muted
      playsinline
      class="absolute inset-0 w-full h-full object-cover"></video>

    <!-- Overlay con gradiente -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-[#1E293B]/90 via-[#1E293B]/70 to-[#5E5884]/80"
    >
    </div>

    <!-- Elementos decorativos flotantes -->
    <div class="absolute inset-0 overflow-hidden">
      <div
        class="absolute top-20 left-20 w-32 h-32 border-2 border-white/10 rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-32 right-32 w-24 h-24 border-2 border-[#5E5884]/30 rounded-full animate-bounce"
      >
      </div>
      <div
        class="absolute top-1/3 right-20 w-16 h-16 bg-[#5E5884]/20 rounded-full blur-xl animate-pulse"
      >
      </div>
    </div>

    <!-- Contenido principal del hero -->
    <div class="relative z-10 min-h-screen flex flex-col justify-center">
      <div class="container mx-auto px-4 py-6 sm:py-8 lg:py-10">
        <!-- Main Title -->
        <div
          class="text-center sm:mb-16"
          data-aos="fade-up"
          data-aos-duration="1000"
        >
          <h1
            class="text-4xl sm:text-6xl lg:text-7xl font-black text-white mb-6 leading-tight"
          >
            <span
              class="block text-3xl sm:text-4xl font-bold text-white mb-4 filter drop-shadow-lg"
            >
              RE+ MEXICO
            </span>
            <span class="text-white bg-clip-text">
              {
                i18next.language === "es"
                  ? "Talleres y Capacitaciones"
                  : "Workshops & Training"
              }
            </span>
          </h1>
        </div>

        <!-- Subtitle -->
        <p
          data-aos="fade-up"
          data-aos-duration="1200"
          class="text-white text-center text-xl md:text-2xl sm:mb-12 max-w-4xl mx-auto leading-relaxed"
        >
          {
            i18next.language === "es"
              ? "Desarrolla tus habilidades técnicas y amplía tu conocimiento en energías renovables con expertos de la industria"
              : "Develop your technical skills and expand your renewable energy knowledge with industry experts"
          }
        </p>

        <!-- Program Component -->
        <ProgramPadre />
      </div>
    </div>
  </div>

  



</Layout>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Mejoras en las sombras de texto */
  h1 {
    text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.8);
  }

  /* Efectos de glassmorphism */
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
  }

  /* Responsive improvements */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
