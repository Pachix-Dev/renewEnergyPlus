---
import Recinto from "../components/hotel/Recinto.astro";
import Profile from "../components/Profile.astro";
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");

const lang = i18next.language;
const base = lang === "es" ? "" : `/${lang}`;
---

<Layout title='RE+ MEXICO | por que visitar'>
  <!-- Hero Section -->
  <section class='relative overflow-hidden bg-gradient-to-br from-slate-50 via-white to-gray-50 min-h-screen flex items-center'>
    <!-- Background Pattern -->
    <div class='absolute inset-0 bg-grid-pattern opacity-5'></div>
    
    <div class='container mx-auto px-6 md:px-12 lg:px-20 py-12 md:py-16'>
      <div class='grid lg:grid-cols-2 gap-8 lg:gap-12 items-center max-w-7xl mx-auto'>
        <!-- Left Content -->
        <div
          class='space-y-6 lg:space-y-8'
          data-aos='fade-right'
          data-aos-duration='1000'
        >
          <!-- Badge -->
          <div 
            class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full border border-gray-200 shadow-sm"
            data-aos='fade-down'
            data-aos-duration='800'
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width={2}
              stroke="currentColor"
              class="w-4 h-4 text-[#64267F]"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09Z"
              ></path>
            </svg>
            <span class="text-sm font-semibold text-gray-700 uppercase tracking-wide">RE+ Mexico 2026</span>
          </div>

          <!-- Title -->
          <h1 
            class='text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight'
            data-aos='fade-up'
            data-aos-duration='1000'
            data-aos-delay='100'
          >
            {t('whyasist.title')}
          </h1>

          <!-- Divider -->
          <div 
            class='h-1 w-20 bg-gradient-to-r from-[#64267F] to-[#BC0100] rounded-full'
            data-aos='zoom-in'
            data-aos-duration='800'
            data-aos-delay='200'
          ></div>

          <!-- Description -->
          <div 
            class='prose prose-lg max-w-none text-gray-600 [&>p]:mb-3 [&>p]:leading-relaxed'
            data-aos='fade-up'
            data-aos-duration='1000'
            data-aos-delay='300'
          >
            <p set:html={t('WhyVisit.description')} />
          </div>

          <!-- CTA Button -->
          <div 
            class='pt-4'
            data-aos='fade-up'
            data-aos-duration='1000'
            data-aos-delay='400'
          >
            <a href={`${base}/registro`} class='button'>
              <span>{t('home.free_register')}</span>
              <svg
                class='icon'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Image -->
        <div
          class='relative lg:h-[calc(100vh-8rem)] h-64 md:h-96'
          data-aos='fade-left'
          data-aos-duration='1000'
          data-aos-delay='200'
        >
          <div class='absolute inset-0 bg-gradient-to-tr from-[#64267F]/10 to-[#BC0100]/10 rounded-2xl'></div>
          <img
            class='relative rounded-2xl shadow-2xl object-cover w-full h-full border border-gray-200'
            src='/img/bgWhyvisitnew.webp'
            alt='RE+ Mexico Event'
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class='py-20 bg-white'>
