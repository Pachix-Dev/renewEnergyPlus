---
import { InstallerInnovationProgram } from "../components/programa2026/InstallerInnovationProgram.jsx";
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");

const translate = t("workshops", { returnObjects: true });
const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<Layout
  title="Installer & Innovation Program 2026"
  description="Descubre el programa completo del Installer & Innovation Program 2026 en Renew Energy Plus. Explora charlas, talleres y sesiones especializadas sobre energías renovables e innovación tecnológica."
>
  <section
    class="bg-gradient-to-b from-gray-900 via-gray-950 to-black py-8 sm:py-16 "
  >
    <div class="max-w-7xl mx-auto text-center">
      <h1 class="text-3xl font-extrabold text-white sm:text-5xl lg:text-6xl">
       INSTALLER & INNOVATION AREA
      </h1>
    </div>
      <div class="max-w-7xl mx-auto">
        <InstallerInnovationProgram
          language={i18next.language}
          client:only="react"
        />
    </div>
  </section>

  <!-- Installer & Innovation Area Section -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16" data-aos="fade-up">
          <div
            class="inline-flex items-center gap-4 bg-gradient-to-r from-[#5E5884] to-[#7B6FA8] text-white px-8 py-3 rounded-full mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
              ></path>
            </svg>
            <span class="font-bold uppercase tracking-wider"
              >Installer & Innovation Area</span
            >
          </div>

          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            {
              i18next.language === "es"
                ? "Capacitación Técnica Integral"
                : "Comprehensive Technical Training"
            }
          </h2>
        </div>

        <!-- Content Grid -->
        <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
          <!-- Text Content -->
          <div data-aos="fade-right">
            <div
              class="bg-white rounded-3xl p-8 shadow-2xl border border-gray-100"
            >
              <div class="flex items-start gap-4 mb-6">
                <div
                  class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {
                      i18next.language === "es"
                        ? "Innovación y Tendencias Actuales"
                        : "Innovation and Current Trends"
                    }
                  </h3>
                  <p class="text-gray-600 leading-relaxed mb-6">
                    {
                      i18next.language === "es"
                        ? "En el piso de exhibición de RE+ MEXICO proporciona unaactualización sobre eventos actuales, tendencias, innovaciones, investigación y análisis en la industria de energías renovables."
                        : "The RE+ MEXICO exhibition floor provides an update on current events, trends, innovations, research, and analysis in the renewable energy industry."
                    }
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6 text-white"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M21 10.5h.375c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125H21M4.5 10.5h6.75V15H4.5v-4.5ZM3.75 18h15A2.25 2.25 0 0 0 21 15.75v-6a2.25 2.25 0 0 0-2.25-2.25h-15A2.25 2.25 0 0 0 1.5 9.75v6A2.25 2.25 0 0 0 3.75 18Z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {
                      i18next.language === "es"
                        ? "Sistemas de Almacenamiento"
                        : "Energy Storage Systems"
                    }
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    {
                      i18next.language === "es"
                        ? "Recibe capacitación técnica integral y de calidad por parte de instructores certificados, incluyendo estrategias y consejos para sistemas de almacenamiento de energía."
                        : "Receive comprehensive and high-quality technical training from certified instructors, including strategies and tips for energy storage systems."
                    }
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Instituciones Participantes -->
          <div data-aos="fade-left">
            <div
              class="bg-gradient-to-br from-[#5E5884] to-[#7B6FA8] rounded-3xl p-8 text-white"
            >
              <h3 class="text-2xl font-bold mb-6 text-center">
                {
                  i18next.language === "es"
                    ? "Instituciones Participantes"
                    : "Participating Institutions"
                }
              </h3>

              <div
                class="grid grid-cols-2 gap-8 items-center justify-items-center"
              >
                <!-- AMIF Logo -->
                <a
                  href="https://www.amif.org.mx/"
                  target="_blank"
                  class="bg-white rounded-lg w-full flex items-center justify-center min-h-[100px] p-2"
                >
                  <img
                    src="/img/amif.webp"
                    alt="AMIF Logo"
                    class="max-h-16 object-contain"
                  />
                </a>

                <!-- EUPD Logo -->
                <a
                  href="https://eupd-group.com/"
                  target="_blank"
                  class="bg-white rounded-lg w-full flex items-center justify-center min-h-[100px] p-2"
                >
                  <img
                    src="/img/aliadosEstrategicos/aliados2/EUPD-Research.webp"
                    alt="AMIF Logo"
                    class="max-h-16 object-contain"
                  />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
</Layout>
