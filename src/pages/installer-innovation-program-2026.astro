---
import { InstallerInnovationProgram } from "../components/programa2026/InstallerInnovationProgram.jsx";
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");

const translate = t("workshops", { returnObjects: true });
const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<Layout
  title="Installer & Innovation Program 2026"
  description="Descubre el programa completo del Installer & Innovation Program 2026 en Renew Energy Plus. Explora charlas, talleres y sesiones especializadas sobre energías renovables e innovación tecnológica."
>
  <!-- Installer & Innovation Area Section -->
  <section
    class="relative overflow-hidden bg-gradient-to-b from-slate-950 via-gray-900 to-black py-12"
  >
    <!-- Sección sobre Installer & Innovation Area -->
    <div>
      <div class="absolute inset-0 pointer-events-none">
        <div
          class="absolute -top-10 -left-24 w-96 h-96 bg-cyan-400/15 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-0 -right-16 w-96 h-96 bg-indigo-500/15 rounded-full blur-3xl"
        >
        </div>
      </div>

      <div class="container relative mx-auto px-4">
        <!-- Header Section -->
        <div class="max-w-7xl mx-auto space-y-4 text-white">
          <h1
            data-aos="fade-up"
            class="text-3xl sm:text-5xl lg:text-6xl font-black tracking-tight text-center"
          >
            INSTALLER & INNOVATION AREA
          </h1>

          <!-- Subheader, description, chips and stats -->
          <div data-aos="fade-up" data-aos-delay="80">
            <p
              class="text-2xl sm:text-3xl font-semibold text-gray-100 text-center"
            >
              {
                i18next.language === "es"
                  ? "Capacitación Técnica Integral"
                  : "Comprehensive Technical Training"
              }
            </p>
          </div>

          <!-- Instituciones Participantes -->
          <div class="relative">
            <div
              data-aos="fade-up"
              data-aos-delay="200"
              class="relative rounded-3xl p-8 shadow-2xl text-white"
            >
              <div class="flex items-center justify-center mb-6">
                <h3 class="text-xl font-bold text-center uppercase">
                  {
                    i18next.language === "es"
                      ? "Instituciones Participantes"
                      : "Participating Institutions"
                  }
                </h3>
              </div>

              <!--logos -->
              <div class="flex justify-center flex-grow gap-6 sm:gap-8">
                <a
                  href="https://www.amif.org.mx/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-white rounded-2xl w-[250px] flex items-center justify-center min-h-[110px] p-3 border border-gray-200 shadow-sm hover:-translate-y-1 hover:shadow-lg transition"
                >
                  <img
                    src="/img/amif.webp"
                    alt="AMIF Logo"
                    class="max-h-16 object-contain"
                  />
                </a>

                <a
                  href="https://eupd-group.com/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-white rounded-2xl w-[250px] flex items-center justify-center min-h-[110px] p-3 border border-gray-200 shadow-sm hover:-translate-y-1 hover:shadow-lg transition"
                >
                  <img
                    src="/img/aliadosEstrategicos/aliados2/EUPD-Research.webp"
                    alt="EUPD Research"
                    class="max-h-16 object-contain"
                  />
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Content Grid -->
        <div
          class="grid lg:grid-cols-2 gap-8 items-center mt-16 max-w-7xl mx-auto"
          data-aos="fade-up"
          data-aos-delay="150"
        >
          <!-- Texto de installer  -->
          <div class="relative h-full">
            <div
              class="absolute -inset-1 bg-gradient-to-br from-indigo-400/30 to-purple-500/20 rounded-3xl blur"
            >
            </div>
            <div
              class="relative bg-white rounded-3xl p-8 shadow-2xl border border-gray-100 h-full flex flex-col"
            >
              <div class="flex items-start gap-4 mb-8">
                <div
                  class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-3">
                    {
                      i18next.language === "es"
                        ? "Innovación y Tendencias Actuales"
                        : "Innovation and Current Trends"
                    }
                  </h3>
                  <p class="text-gray-700 leading-relaxed">
                    {
                      i18next.language === "es"
                        ? "En el piso de exhibición de RE+ MEXICO proporciona una actualización sobre eventos actuales, tendencias, innovaciones, investigación y análisis en la industria de energías renovables."
                        : "The RE+ MEXICO exhibition floor provides an update on current events, trends, innovations, research, and analysis in the renewable energy industry."
                    }
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6 text-white"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M21 10.5h.375c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125H21M4.5 10.5h6.75V15H4.5v-4.5ZM3.75 18h15A2.25 2.25 0 0 0 21 15.75v-6a2.25 2.25 0 0 0-2.25-2.25h-15A2.25 2.25 0 0 0 1.5 9.75v6A2.25 2.25 0 0 0 3.75 18Z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-3">
                    {
                      i18next.language === "es"
                        ? "Sistemas de Almacenamiento"
                        : "Energy Storage Systems"
                    }
                  </h3>
                  <p class="text-gray-700 leading-relaxed">
                    {
                      i18next.language === "es"
                        ? "Recibe capacitación técnica integral y de calidad por parte de instructores certificados, incluyendo estrategias y consejos para sistemas de almacenamiento de energía."
                        : "Receive comprehensive and high-quality technical training from certified instructors, including strategies and tips for energy storage systems."
                    }
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Imagen Principal -->
          <div
            class="relative h-full"
            data-aos="fade-left"
            data-aos-delay="100"
          >
            <div
              class="absolute inset-0 bg-gradient-to-br from-cyan-400/25 via-indigo-500/20 to-purple-500/10 rounded-3xl blur-3xl"
            >
            </div>
            <div
              class="relative overflow-hidden rounded-3xl border border-white/10 shadow-2xl bg-white/5 backdrop-blur h-full flex"
            >
              <img
                src="/img/installes_inovations.webp"
                alt={i18next.language === "es"
                  ? "Sesiones técnicas y talleres para instaladores"
                  : "Technical sessions and workshops for installers"}
                loading="lazy"
                class="w-full h-full object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/45 via-black/20 to-transparent"
              >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Program Section -->
    <div
      class="bg-gradient-to-b from-gray-900 via-gray-950 to-black pt-20 pb-10 sm:pb-16"
    >
      <div class="text-center" data-aos="fade-up">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white uppercase"
        >
          {
            i18next.language === "es"
              ? "Programa de Conferencias"
              : "Conference Program"
          }
        </h2>
      </div>
      <div class="max-w-7xl mx-auto">
        <InstallerInnovationProgram
          language={i18next.language}
          client:only="react"
        />
      </div>
    </div>
  </section>
</Layout>
