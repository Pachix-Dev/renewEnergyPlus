---
import i18next, { t } from 'i18next'

const lang = i18next.language
const base = lang === 'es' ? '' : `/${lang}`
---

<main class='mx-5 md:mx-16 lg:mx-32 py-20'>
  <h1 class='text-left text-[#ed6b06] text-4xl font-extrabold py-5'>
    {t('menu.submenu_2.option_13')}
  </h1>
  <div class='grid md:grid-cols-2 gap-10'>
    <a
      href={`${base}/contenido-gratuito/enlightenment-area`}
      class='group relative block bg-black'
    >
      <img
        alt=''
        src='/img/conferences.webp'
        class='absolute w-full opacity-75 h-32 object-cover transition-opacity group-hover:opacity-50'
      />

      <div class='relative p-4 sm:p-6 lg:p-8 h-32'>
        <p class='text-sm font-medium uppercase tracking-widest text-[#BD0500]'>
          RE+ MEXICO
        </p>

        <p class='text-xl font-bold text-white sm:text-2xl'>
          Enlightenmment Area
        </p>
      </div>
    </a>

    <a
      href={`${base}/contenido-gratuito/installer-innovation-area`}
      class='group relative block bg-black'
    >
      <img
        alt=''
        src='/img/conferences2.webp'
        class='absolute inset-0 w-full h-32 object-cover opacity-75 transition-opacity group-hover:opacity-50'
      />

      <div class='relative p-4 sm:p-6 lg:p-8 h-32'>
        <p class='text-sm font-medium uppercase tracking-widest text-[#BD0500]'>
          RE+ MEXICO
        </p>

        <p class='text-xl font-bold text-white sm:text-2xl'>
          Installer & Innovation Area
        </p>
      </div>
    </a>
  </div>
</main>
