---
import i18next, { t, changeLanguage } from "i18next";
---
  <!-- Sunset Cocktail Section -->
  <div id="sunsetCocktail"
    class="relative py-24 md:py-28 px-4 bg-gradient-to-b from-[#1E293B] via-[#1E293B]/95 to-[#1E293B] overflow-hidden"
  >
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div
        class="absolute -top-20 -right-20 w-[500px] h-[500px] bg-gradient-radial from-yellow-400/10 via-[#5E5884]/5 to-transparent rounded-full blur-3xl animate-pulse"
      >
      </div>
      <div
        class="absolute -bottom-32 -left-32 w-[600px] h-[600px] bg-gradient-radial from-[#5E5884]/15 via-yellow-400/5 to-transparent rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-radial from-transparent via-[#5E5884]/5 to-transparent rounded-full blur-2xl"
      >
      </div>
    </div>
    <!-- Contenido principal -->
    <div class="relative z-10 max-w-7xl mx-auto">
      <!-- Header -->
      <div
        class="text-center mb-10"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
        <div class="inline-block mb-4">
          <span
            class="text-yellow-400 text-sm sm:text-base font-bold uppercase tracking-[0.3em] px-6 py-2 border-2 border-yellow-400/40 rounded-full bg-yellow-400/5 backdrop-blur-sm"
          >
            {t("sunset_cocktail.subtitle")}
          </span>
        </div>
        <h2
          class="text-4xl sm:text-6xl lg:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-white via-yellow-100 to-yellow-300 mb-8 drop-shadow-2xl uppercase tracking-tight"
        >
          Sunset Cocktail
        </h2>
      </div>

      <!-- Layout principal -->
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12 items-center">
        <!-- Video  -->
        <div
          class="lg:col-span-3"
          data-aos="fade-right"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          <div class="relative group">
            <!-- Efecto de brillo alrededor -->
            <div
              class="absolute -inset-1 bg-gradient-to-r from-yellow-400 via-[#5E5884] to-yellow-400 rounded-3xl blur-xl opacity-30 group-hover:opacity-50 transition-opacity duration-500"
            >
            </div>

            <!-- Container del video -->
            <div
              class="relative rounded-3xl overflow-hidden shadow-2xl border-2 border-yellow-400/30 hover:border-yellow-400/60 transition-all duration-500"
            >
              <div
                class="aspect-video bg-gradient-to-br from-[#1E293B] to-[#5E5884]/50"
              >
                <video
                  src="/video/sunset_cocktail_video.mp4"
                  poster="/img/sunset_cocktail_back.webp"
                  autoplay
                  loop
                  muted
                  playsinline
                  class="w-full h-full object-cover"></video>
              </div>
            </div>
          </div>
        </div>

        <!-- InformaciÃ³n -->
        <div
          class="lg:col-span-2 space-y-6"
          data-aos="fade-left"
          data-aos-duration="1000"
          data-aos-delay="300"
        >
          <!-- Fecha, Hora y Lugar Card - Compacta -->
          <div class="relative group">
            <div
              class="absolute -inset-0.5 bg-gradient-to-r from-yellow-400 to-[#5E5884] rounded-2xl blur opacity-20 group-hover:opacity-40 transition-opacity duration-300"
            >
            </div>
            <div
              class="relative bg-gradient-to-br from-yellow-400/15 via-[#5E5884]/15 to-[#1E293B]/80 backdrop-blur-xl border-2 border-yellow-400/40 rounded-2xl p-4 sm:p-6 shadow-xl hover:shadow-2xl transition-all duration-300"
            >
              <!-- Fecha -->
              <div class="flex items-center gap-2.5 mb-3">
                <div
                  class="w-9 h-9 rounded-lg bg-gradient-to-br from-yellow-400 to-yellow-500 flex items-center justify-center shadow-lg flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-[#1E293B]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p
                    class="text-[10px] text-yellow-400/80 font-semibold uppercase tracking-wider"
                  >
                    {t("sunset_cocktail.date-element")}
                  </p>
                  <p class="text-white font-bold text-sm">
                    {t("sunset_cocktail.date")}
                  </p>
                </div>
              </div>
              
              <!-- Hora -->
              <div class="flex items-center gap-2.5 mb-3 pt-3 border-t border-white/10">
                <div
                  class="w-9 h-9 rounded-lg bg-gradient-to-br from-[#5E5884] to-[#1E293B] flex items-center justify-center shadow-lg flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p
                    class="text-[10px] text-yellow-400/80 font-semibold uppercase tracking-wider"
                  >
                    {t("sunset_cocktail.time-element")}
                  </p>
                  <p class="text-white font-bold text-sm">
                    {t("sunset_cocktail.time")}
                  </p>
                </div>
              </div>
              
              <!-- Lugar -->
              <div
                class="flex items-center gap-2.5 pt-3 border-t border-white/10"
              >
                <div
                  class="w-9 h-9 rounded-lg bg-gradient-to-br from-yellow-400 to-[#5E5884] flex items-center justify-center shadow-lg flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-[#1E293B]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p
                    class="text-[10px] text-yellow-400/80 font-semibold uppercase tracking-wider"
                  >
                    {t("sunset_cocktail.place-element")}
                  </p>
                  <p class="text-white font-bold text-sm">
                    VIP Area
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- DescripciÃ³n Card -->
          <div class="relative group">
            <div
              class="absolute -inset-0.5 bg-gradient-to-r from-[#5E5884] to-yellow-400 rounded-2xl blur opacity-10 group-hover:opacity-30 transition-opacity duration-300"
            >
            </div>
            <div
              class="relative bg-gradient-to-br from-[#5E5884]/20 via-[#1E293B]/80 to-[#1E293B]/90 backdrop-blur-xl border border-[#5E5884]/40 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300"
            >
              <div class="flex items-start gap-4">
                <div
                  class="w-1 h-full bg-gradient-to-b from-yellow-400 via-[#5E5884] to-transparent rounded-full"
                >
                </div>
                <div class="flex-1">
                  <h3
                    class="text-yellow-400 font-bold text-sm uppercase tracking-wider mb-3"
                  >
                    {t("sunset_cocktail.desc-element")}
                  </h3>
                  <p class="text-white/90 text-base leading-relaxed">
                    {t("sunset_cocktail.description")}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Tags decorativos -->
          <div class="flex flex-wrap gap-2">
            <span
              class="iinline-flex items-center gap-1.5 px-4 py-2 bg-[#5E5884]/10 border border-[#5E5884]/30 rounded-full text-white text-[10px] text-xs sm:text-sm font-semibold backdrop-blur-sm hover:bg-[#5E5884]/20 transition-all"
            >
              <span>ğŸµ</span>
              {t("sunset_cocktail.tag01")}
            </span>
            <span
              class="inline-flex items-center gap-1.5 px-4 py-2 bg-[#5E5884]/10 border border-[#5E5884]/30 rounded-full text-white text-[10px] text-xs sm:text-sm font-semibold backdrop-blur-sm hover:bg-[#5E5884]/20 transition-all"
            >
              <span>ğŸ¥‚</span>
              {t("sunset_cocktail.tag02")}
            </span>
            <span
              class="inline-flex items-center gap-1.5 px-4 py-2 bg-[#5E5884]/10 border border-[#5E5884]/30 rounded-full text-white text-[10px] text-xs sm:text-sm font-semibold backdrop-blur-sm hover:bg-[#5E5884]/20 transition-all"
            >
              <span>ğŸ¤</span>
              {t("sunset_cocktail.tag03")}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>