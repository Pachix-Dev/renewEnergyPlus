---
import { hotels } from "../../data/directorio_turistico";
import { parques } from "../../data/directorio_turistico";
import { restaurants } from "../../data/directorio_turistico";
import { t } from "i18next";
import PlaceCard from "./PlaceCard.astro";
---

<section class="mt-14 container mx-auto hotels">
  <div class="text-center md:mb-20 mb-10 px-4">
    <h1
      class="font-extrabold text-3xl md:text-4xl lg:text-5xl uppercase text-[#565078] mb-4"
    >
      {t("hotels.title")}
    </h1>
    <div
      class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-6"
    >
    </div>
    <p
      class="text-base md:text-lg text-gray-700 leading-relaxed max-w-8xl mx-auto"
      set:html={t("hotels.description")}
    />
  </div>
  <div
    class="mt-5 grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-6 px-4"
  >
    {
      hotels.map((hotel) => (
        <div class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[#fc913f]">
          <div class="relative overflow-hidden">
            <img
              class="w-full h-60 object-cover transition-transform duration-500 group-hover:scale-110"
              src={`/img/${hotel.src}`}
              alt={hotel.name}
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0" />
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <h5 class="text-xl font-bold text-white drop-shadow-lg">
                {hotel.name}
              </h5>
            </div>
          </div>

          <div class="p-5 space-y-3">
            <div class="space-y-2">
              <div class="flex items-start gap-2 p-2.5 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-5 h-5 mt-0.5 flex-shrink-0 text-[#565078]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                  />
                </svg>
                <p class="text-gray-700 text-sm leading-relaxed">
                  {hotel.address}
                </p>
              </div>

              <div class="flex items-center gap-2 p-2.5 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-5 h-5 flex-shrink-0 text-[#565078]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"
                  />
                </svg>
                <p class="text-gray-700 text-sm font-medium">{hotel.phone}</p>
              </div>
            </div>
            <div class="bg-gradient-to-r from-[#565078] to-[#6a5f8e] text-white p-3.5 rounded-lg">
              <p class="text-sm font-semibold mb-1">{t("hotels.rate")}</p>
              <p class="text-2xl font-bold">{hotel.rate}</p>
              <p class="text-xs opacity-90">+ {t("hotels.taxes")}</p>
            </div>
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-sm text-gray-600 bg-gray-50 p-2.5 rounded-lg">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-4 h-4 flex-shrink-0"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                  />
                </svg>
                <span class="text-xs break-all">{hotel.email}</span>
              </div>

              <div class="bg-amber-50 border border-amber-200 p-2.5 rounded-lg">
                <p class="text-xs text-amber-800 mb-1">{t("hotels.code")}</p>
                <p class="text-base font-bold text-amber-900">{hotel.code}</p>
              </div>
            </div>

            <div class="flex gap-3">
              <div class="flex items-center gap-2 bg-green-50 px-3 py-2 rounded-lg flex-1">
                <img src="/img/walk_icon.webp" width={18} class="opacity-70" />
                <span class="text-sm font-semibold text-green-800">
                  {hotel.time_walk} min
                </span>
              </div>
              <div class="flex items-center gap-2 bg-blue-50 px-3 py-2 rounded-lg flex-1">
                <img src="/img/car_icon.webp" width={18} class="opacity-70" />
                <span class="text-sm font-semibold text-blue-800">
                  {hotel.time_drive} min
                </span>
              </div>
            </div>

            {hotel?.link && (
              <a
                href={hotel.link}
                target="_blank"
                class="w-full inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold text-white bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300"
              >
                {t("hotels.book")}
                <svg
                  class="rtl:rotate-180 w-4 h-4"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 14 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                  />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
<section class="container mx-auto mt-16 mb-16 px-4">
  <div class="max-w-6xl mx-auto space-y-12">
    <!-- Acerca de Guadalajara -->
    <div
      class="bg-gradient-to-br from-gray-50 to-white p-8 rounded-2xl shadow-lg border border-gray-100"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="200"
      data-aos-anchor-placement="top-center"
    >
      <div class="flex items-center gap-3 mb-4">
        <div
          class="w-1 h-8 bg-gradient-to-b from-[#565078] to-[#fc913f] rounded-full"
        >
        </div>
        <h2 class="font-extrabold text-2xl md:text-3xl text-[#565078]">
          {t("hotels.about_gdl")}
        </h2>
      </div>
      <p
        class="text-base md:text-lg text-gray-700 leading-relaxed"
        set:html={t("hotels.description_gdl")}
      />
    </div>

    <!-- Restaurantes -->
    <section
      id="restaurants"
      class="py-16 bg-gradient-to-br from-gray-50 to-white"
      data-aos="fade-up"
      data-aos-duration="2000"
      data-aos-delay="200"
      data-aos-anchor-placement="top-center"
    >
      <div class="max-w-4xl mx-auto text-center mb-16">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 mb-6 bg-gradient-to-r from-orange-50 to-orange-100 px-5 py-2.5 rounded-full border border-orange-200 shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width={2.5}
            stroke="currentColor"
            class="w-5 h-5 text-[#fc913f]"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 8.25v-1.5m0 1.5c-1.355 0-2.697.056-4.024.166C6.845 8.51 6 9.473 6 10.608v2.513m6-4.871c1.355 0 2.697.056 4.024.166C17.155 8.51 18 9.473 18 10.608v2.513M15 8.25v-1.5m-6 1.5v-1.5m12 9.75l-1.5.75a3.354 3.354 0 01-3 0 3.354 3.354 0 00-3 0 3.354 3.354 0 01-3 0 3.354 3.354 0 00-3 0 3.354 3.354 0 01-3 0L3 16.5m15-3.379a48.474 48.474 0 00-6-.371c-2.032 0-4.034.126-6 .371m12 0c.39.049.777.102 1.163.16 1.07.16 1.837 1.094 1.837 2.175v5.169c0 .621-.504 1.125-1.125 1.125H4.125A1.125 1.125 0 013 20.625v-5.17c0-1.08.768-2.014 1.837-2.174A47.78 47.78 0 016 13.12M12.265 3.11a.375.375 0 11-.53 0L12 2.845l.265.265zm-3 0a.375.375 0 11-.53 0L9 2.845l.265.265zm6 0a.375.375 0 11-.53 0L15 2.845l.265.265z"
            ></path>
          </svg>
          <span
            class="text-sm font-bold text-[#fc913f] uppercase tracking-wide"
          >
            Gastronom√≠a Local
          </span>
        </div>

        <!-- Title -->
        <h2
          class="font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight"
        >
          {t("hotels.restaurants")}
        </h2>

        <!-- Divider -->
        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-8"
        >
        </div>

        <!-- Description Card -->
        <div
          class="bg-white/80 backdrop-blur-sm p-6 md:p-8 rounded-3xl shadow-xl border border-gray-100/50 hover:shadow-2xl transition-all duration-500 hover:scale-[1.02]"
        >
          <div
            class="prose prose-lg max-w-none text-gray-700 leading-relaxed [&>p]:mb-0"
            set:html={t("hotels.restaurants_desc")}
          />
        </div>
      </div>
      <PlaceCard places={restaurants} />
    </section>

    <!-- Entretenimiento -->
    <section
      class="py-16 bg-gradient-to-br from-gray-50 to-white space-y-12"
      data-aos="fade-up"
      data-aos-duration="3000"
      data-aos-delay="200"
      data-aos-anchor-placement="top-center"
    >
      <div class="max-w-4xl mx-auto text-center mb-16">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 mb-6 bg-gradient-to-r from-purple-50 to-purple-100 px-5 py-2.5 rounded-full border border-purple-200 shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width={2.5}
            stroke="currentColor"
            class="w-5 h-5 text-[#565078]"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 9l10.5-3m0 6.553v3.75a2.25 2.25 0 01-1.632 2.163l-1.32.377a1.803 1.803 0 11-.99-3.467l2.31-.66a2.25 2.25 0 001.632-2.163zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 01-1.632 2.163l-1.32.377a1.803 1.803 0 01-.99-3.467l2.31-.66A2.25 2.25 0 009 15.553z"
            ></path>
          </svg>
          <span
            class="text-sm font-bold text-[#565078] uppercase tracking-wide"
          >
            Entretenimiento
          </span>
        </div>

        <!-- Title -->
        <h2
          class="font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight"
        >
          {t("hotels.entertainment")}
        </h2>

        <!-- Divider -->
        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-8"
        >
        </div>

        <!-- Description Card -->
        <div
          class="bg-white/80 backdrop-blur-sm p-6 md:p-8 rounded-3xl shadow-xl border border-gray-100/50 hover:shadow-2xl transition-all duration-500 hover:scale-[1.02]"
        >
          <div
            class="prose prose-lg max-w-none text-gray-700 leading-relaxed [&>p]:mb-0"
            set:html={t("hotels.entertainment_desc")}
          />
        </div>
      </div>
      <PlaceCard places={parques} />
    </section>

    <!-- Moneda -->
    <div
      class="bg-gradient-to-br from-amber-50 to-white p-8 rounded-2xl shadow-lg border border-amber-100"
      data-aos="fade-up"
      data-aos-duration="2000"
      data-aos-delay="300"
      data-aos-anchor-placement="top-center"
    >
      <div class="flex items-center gap-3 mb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width={2}
          stroke="currentColor"
          class="w-8 h-8 text-[#fc913f]"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <h2 class="font-extrabold text-2xl md:text-3xl text-[#565078]">
          {t("hotels.money")}
        </h2>
      </div>
      <p
        class="text-base md:text-lg text-gray-700 leading-relaxed mb-6"
        set:html={t("hotels.money_desc")}
      />
      <a
        href="https://www.xe.com/currencyconverter/convert/?Amount=1&From=USD&To=MXN"
        target="_blank"
        class="inline-flex items-center gap-2 px-6 py-3 text-base font-semibold text-white bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width={2}
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5"
          ></path>
        </svg>
        {t("hotels.link_currency")}
      </a>
    </div>
  </div>
</section>
