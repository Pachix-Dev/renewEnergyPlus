---
import { restaurants } from "../../data/directorio_turistico";
import i18next,{ t } from 'i18next';
const language = i18next.language;
---

<section class="relative py-20 bg-gradient-to-br from-gray-50 via-white to-orange-50 overflow-hidden">
  <!-- Decorative Background Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-[#fc913f]/5 rounded-full blur-3xl -z-0"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#565078]/5 rounded-full blur-3xl -z-0"></div>

  <div class="container mx-auto px-4 md:px-6 lg:px-8 relative z-10">
    <!-- Header Section with Description -->
    <div class="max-w-4xl mx-auto text-center mb-16">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 mb-6 bg-gradient-to-r from-orange-50 to-orange-100 px-5 py-2.5 rounded-full border border-orange-200 shadow-sm">
        <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width={2.5} stroke='currentColor' class='w-5 h-5 text-[#fc913f]'>
          <path stroke-linecap='round' stroke-linejoin='round' d='M12 8.25v-1.5m0 1.5c-1.355 0-2.697.056-4.024.166C6.845 8.51 6 9.473 6 10.608v2.513m6-4.871c1.355 0 2.697.056 4.024.166C17.155 8.51 18 9.473 18 10.608v2.513M15 8.25v-1.5m-6 1.5v-1.5m12 9.75l-1.5.75a3.354 3.354 0 01-3 0 3.354 3.354 0 00-3 0 3.354 3.354 0 01-3 0 3.354 3.354 0 00-3 0 3.354 3.354 0 01-3 0L3 16.5m15-3.379a48.474 48.474 0 00-6-.371c-2.032 0-4.034.126-6 .371m12 0c.39.049.777.102 1.163.16 1.07.16 1.837 1.094 1.837 2.175v5.169c0 .621-.504 1.125-1.125 1.125H4.125A1.125 1.125 0 013 20.625v-5.17c0-1.08.768-2.014 1.837-2.174A47.78 47.78 0 016 13.12M12.265 3.11a.375.375 0 11-.53 0L12 2.845l.265.265zm-3 0a.375.375 0 11-.53 0L9 2.845l.265.265zm6 0a.375.375 0 11-.53 0L15 2.845l.265.265z' />
        </svg>
        <span class="text-sm font-bold text-[#fc913f] uppercase tracking-wide">
          Gastronomía Local
        </span>
      </div>

      <!-- Title -->
      <h2 class='font-extrabold text-4xl md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-[#565078] to-[#6a5f8e] mb-6 leading-tight'>
        {t('hotels.restaurants')}
      </h2>

      <!-- Divider -->
      <div class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto mb-8"></div>

      <!-- Description Card -->
      <div class='bg-white/80 backdrop-blur-sm p-6 md:p-8 rounded-3xl shadow-xl border border-gray-100/50 hover:shadow-2xl transition-all duration-500 hover:scale-[1.02]'>
        <div class='prose prose-lg max-w-none text-gray-700 leading-relaxed [&>p]:mb-0' set:html={t('hotels.restaurants_desc')} />
      </div>
    </div>

    <!-- Restaurants Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-10">
      {
        restaurants.map((restaurant, index) => (
          <div 
            class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100 hover:border-[#fc913f]/50 hover:-translate-y-2"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Image Container -->
            <div class="relative overflow-hidden aspect-[4/3]">
              <img
                src={`/img/${restaurant.src}`}
                alt={restaurant.name}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-300"></div>
              
              <!-- Restaurant Name on Image -->
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <div class="transform transition-transform duration-300 group-hover:translate-y-0">
                  <h3 class="text-2xl font-extrabold text-white drop-shadow-2xl mb-1">
                    {restaurant.name}
                  </h3>
                  <div class="h-1 w-16 bg-[#fc913f] rounded-full transform origin-left transition-all duration-300 group-hover:w-24"></div>
                </div>
              </div>
            </div>
            
            <!-- Content Container -->
            <div class="p-6 md:p-7">
              <!-- Description -->
              <p class="text-gray-600 text-base leading-relaxed mb-6 min-h-[90px] line-clamp-4">
                {language === 'en' ? restaurant.description_en : restaurant.description_es}
              </p>
              
              <!-- Location Button -->
              {restaurant.link && (
                <a 
                  href={restaurant.link} 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group/btn relative inline-flex items-center justify-center gap-3 px-6 py-4 text-sm font-bold text-white bg-gradient-to-r from-[#565078] via-[#6a5f8e] to-[#565078] bg-size-200 bg-pos-0 hover:bg-pos-100 rounded-xl shadow-md hover:shadow-xl transition-all duration-500 w-full overflow-hidden"
                >
                  <!-- Animated Background -->
                  <div class="absolute inset-0 bg-gradient-to-r from-[#fc913f] via-[#ff9f5a] to-[#fc913f] bg-size-200 bg-pos-0 opacity-0 group-hover/btn:opacity-100 group-hover/btn:bg-pos-100 transition-all duration-500"></div>
                  
                  <!-- Button Content -->
                  <span class="relative z-10 flex items-center gap-2.5">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={2.5} stroke="currentColor" class="w-5 h-5 transition-transform duration-500 group-hover/btn:scale-110 group-hover/btn:rotate-12">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    <span class="tracking-wide">Ver Ubicación</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={2.5} stroke="currentColor" class="w-4 h-4 transition-transform duration-500 group-hover/btn:translate-x-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </span>
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bg-size-200 {
    background-size: 200% 100%;
  }

  .bg-pos-0 {
    background-position: 0% 0%;
  }

  .bg-pos-100 {
    background-position: 100% 0%;
  }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
