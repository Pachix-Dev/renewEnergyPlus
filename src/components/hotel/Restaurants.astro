---
import { restaurants } from "../../data/directorio_turistico";
import i18next,{ t } from 'i18next';
const language = i18next.language;
---

<section class="py-16 bg-gradient-to-br from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <div class="inline-block mb-4">
        <span class="text-sm font-semibold text-[#fc913f] uppercase tracking-wider bg-orange-50 px-4 py-2 rounded-full">
          Gastronomía
        </span>
      </div>
      <h2 class="text-4xl md:text-5xl font-extrabold text-[#565078] mb-4">
        Restaurantes
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full mx-auto"></div>
    </div>

    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        restaurants.map((restaurant) => (
          <div class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[#fc913f]">
            <div class="relative overflow-hidden">
              <img
                src={`/img/${restaurant.src}`}
                alt={restaurant.name}
                class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0"></div>
              <div class="absolute bottom-0 left-0 right-0 p-5">
                <h3 class="text-xl font-bold text-white drop-shadow-lg">{restaurant.name}</h3>
              </div>
            </div>
            
            <div class="p-6">
              <p class="text-gray-700 text-base leading-relaxed mb-6 min-h-[80px]">
                {language === 'en' ? restaurant.description_en : restaurant.description_es}
              </p>
              
              {restaurant.link && (
                <a 
                  href={restaurant.link} 
                  target="_blank" 
                  class="group/btn relative inline-flex items-center justify-center gap-3 px-6 py-3.5 text-sm font-bold text-white bg-gradient-to-r from-[#565078] to-[#6a5f8e] rounded-xl hover:shadow-xl overflow-hidden transition-all duration-300 w-full hover:scale-[1.02]"
                >
                  <div class="absolute inset-0 bg-gradient-to-r from-[#fc913f] to-[#ff7b2f] opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></div>
                  
                  <span class="relative z-10 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={2.5} stroke="currentColor" class="w-5 h-5 transition-transform duration-300 group-hover/btn:scale-110">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    Ver Ubicación
                  </span>
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
