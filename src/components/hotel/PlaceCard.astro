---
import i18next from 'i18next';

// Definir la interfaz de Props para este componente
interface Props {
  places: any[];
}

// Recibir el parámetro 'places' que se envía desde TarifasHoteles
const { places } = Astro.props;
const language = i18next.language;
---

<section class="relative py-20 overflow-hidden">
  <div class="container mx-auto px-6 md:px-12 lg:px-20 relative z-10">
    <!-- Restaurants Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-10">
      {
        places.map((place, index) => (
          <div 
            class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100 hover:border-[#fc913f]/50 hover:-translate-y-2"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Image Container -->
            <div class="relative overflow-hidden aspect-[4/3]">
              <img
                src={`/img/${place.src}`}
                alt={place.name}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-300"></div>
              
              <!-- Restaurant Name on Image -->
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <div class="transform transition-transform duration-300 group-hover:translate-y-0">
                  <h3 class="text-2xl font-extrabold text-white drop-shadow-2xl mb-1">
                    {place.name}
                  </h3>
                  <div class="h-1 w-16 bg-[#fc913f] rounded-full transform origin-left transition-all duration-300 group-hover:w-24"></div>
                </div>
              </div>
            </div>
            
            <!-- Content Container -->
            <div class="p-6 md:p-7">
              <!-- Description -->
              <p class="text-gray-600 text-base leading-relaxed mb-6 min-h-[90px] line-clamp-4 text-justify">
                {language === 'en' ? place.description_en : place.description_es}
              </p>
              
              <!-- Location Button -->
              {place.link && (
                <a 
                  href={place.link} 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group/btn relative inline-flex items-center justify-center gap-3 px-6 py-4 text-sm font-bold text-white bg-gradient-to-r from-[#565078] via-[#6a5f8e] to-[#565078] bg-size-200 bg-pos-0 hover:bg-pos-100 rounded-xl shadow-md hover:shadow-xl transition-all duration-500 w-full overflow-hidden"
                >
                  <!-- Animated Background -->
                  <div class="absolute inset-0 bg-gradient-to-r from-[#fc913f] via-[#ff9f5a] to-[#fc913f] bg-size-200 bg-pos-0 opacity-0 group-hover/btn:opacity-100 group-hover/btn:bg-pos-100 transition-all duration-500"></div>
                  
                  <!-- Button Content -->
                  <span class="relative z-10 flex items-center gap-2.5">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={2.5} stroke="currentColor" class="w-5 h-5 transition-transform duration-500 group-hover/btn:scale-110 group-hover/btn:rotate-12">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    <span class="tracking-wide">Ver Ubicación</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={2.5} stroke="currentColor" class="w-4 h-4 transition-transform duration-500 group-hover/btn:translate-x-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </span>
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bg-size-200 {
    background-size: 200% 100%;
  }

  .bg-pos-0 {
    background-position: 0% 0%;
  }

  .bg-pos-100 {
    background-position: 100% 0%;
  }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
