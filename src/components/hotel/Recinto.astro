---
import { t } from "i18next";
---
<section class="py-16 my-12 bg-gradient-to-br from-gray-100 to-white ">
  <div class="container mx-auto px-6 md:px-12 lg:px-20">
    <div class="grid md:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="space-y-6 order-2 md:order-1">
        <div class="inline-block">
          <span
            class="text-2xl font-semibold text-[#fc913f] uppercase tracking-wider bg-orange-50 px-4 py-2 rounded-full"
            data-aos="fade-up"
            data-aos-anchor-placement="top-bottom"
            data-aos-duration="4000"
            data-aos-delay="1000"
          >
            {t("hotels.cede")}
          </span>
        </div>

        <h2
          class="text-5xl md:text-6xl font-extrabold text-[#565078] leading-tight"
          data-aos="zoom-in"
          data-aos-duration="3000"
          data-aos-duration="1500"
        >
          Expo Guadalajara
        </h2>

        <div
          class="h-1 w-24 bg-gradient-to-r from-[#565078] to-[#fc913f] rounded-full"
        >
        </div>

        <div
          class="text-gray-700 text-lg leading-relaxed space-y-4"
          data-aos="fade-up"
          data-aos-anchor-placement="top-bottom"
          data-aos-duration="4000"
          data-aos-delay="1000"
          set:html={t("hotels.text_description")}
        />

        <div class="flex items-center gap-4 pt-4">
          <div class="flex items-center gap-2 text-[#565078]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width={2}
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
              ></path>
            </svg>
            <span class="font-semibold">Guadalajara, MÃ©xico</span>
          </div>
        </div>
      </div>

      <div class="relative group order-1 md:order-2">
        <!-- Container principal de la imagen -->
        <div
          class="relative overflow-hidden rounded-tl-[3rem] rounded-br-[3rem] shadow-xl"
          data-aos="fade-zoom-in"
          data-aos-easing="ease-in-back"
          data-aos-delay="1000"
          data-aos-offset="0"
        >
          <img
            src="/img/expoguadalajara.webp"
            alt="expo guadalajara"
            class="w-full h-auto object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</section>
