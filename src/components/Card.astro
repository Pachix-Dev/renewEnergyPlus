---
import { t } from 'i18next'
---

<section class='my-20'>
  <p class='text-center text-[#8B3294] text-3xl font-bold'>
    {t('home.attend.reasons_visiting_title')}
  </p>
  <div class='container grid lg:flex mx-auto justify-between my-5'>
    <div class='cards text-center p-3'>
      <img src='/img/attend_icon_1.webp' alt='' class='w-28 h-28 m-auto' />
      <p class='text-center text-xs font-bold italic mx-5'>
        {t('home.attend.item_1')}
      </p>
    </div>
    <div class='cards text-center p-3'>
      <img src='/img/attend_icon_2.webp' alt='' class='w-28 h-28 m-auto' />
      <p class='text-center text-xs font-bold italic mx-5'>
        {t('home.attend.item_2')}
      </p>
    </div>
    <div class='cards text-center p-3'>
      <img src='/img/attend_icon_3.webp' alt='' class='w-28 h-28 m-auto' />
      <p class='text-center text-xs font-bold italic mx-5'>
        {t('home.attend.item_3')}
      </p>
    </div>
  </div>
  <div class='container flex mx-auto justify-center gap-5 my-5'>
    <div class='cards text-center p-3'>
      <img src='/img/attend_icon_4.webp' alt='' class='w-28 h-28 m-auto' />
      <p class='text-center text-xs font-bold italic mx-5'>
        {t('home.attend.item_4')}
      </p>
    </div>
    <div class='cards text-center p-3'>
      <img src='/img/attend_icon_5.webp' alt='' class='w-28 h-28 m-auto' />
      <p class='text-center text-xs font-bold italic mx-5'>
        {t('home.attend.item_5')}
      </p>
    </div>
  </div>

  <style>
    @keyframes show {
      from {
        opacity: 0;
        scale: 10%;
      }
      to {
        opacity: 1;
        scale: 100%;
      }
    }
    .cards {
      view-timeline-name: --card;
      view-timeline-axis: block;

      animation-timeline: --card;
      animation-name: show;

      animation-range: entry 60% cover 60%;
      animation-fill-mode: both;
    }
  </style>
</section>
