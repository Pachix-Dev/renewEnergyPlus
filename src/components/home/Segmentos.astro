    <!-- Header mejorado -->
    <div class='text-center mb-16' data-aos='fade-up' data-aos-duration='1000'>
      <h2 class='text-4xl lg:text-5xl font-bold text-white mb-6 uppercase'>
        {t('home.segments.title')} RE+ MEXICO
      </h2>
      <div
        class='w-32 h-1 bg-gradient-to-r from-[#BC0100] to-[#D76901] mx-auto rounded-full'
      >
      </div>
      <p class='text-xl text-gray-300 mt-6 max-w-3xl mx-auto leading-relaxed'>
        {t('home.segments.subtitle')}
      </p>
    </div>

    <!-- Grid de segmentos optimizado -->
