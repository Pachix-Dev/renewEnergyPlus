  <!-- Elementos decorativos de fondo -->
  <div class='absolute inset-0'>
    <div
      class='absolute top-20 right-20 w-96 h-96 bg-gradient-to-br from-[#565078]/10 to-[#BC0100]/10 rounded-full blur-3xl'
    >
    </div>
    <div
      class='absolute bottom-20 left-20 w-80 h-80 bg-gradient-to-tr from-[#D76901]/10 to-[#565078]/10 rounded-full blur-3xl'
    >
    </div>
  </div>

