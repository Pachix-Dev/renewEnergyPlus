---
import i18next, { t } from 'i18next'
import { CounterDown } from './CounterDown'
import Content from '../Content.astro'
const lang = i18next.language

const base = i18next.language === 'es' ? '' : `/${lang}`
---

<section class='relative lab-bg py-20 bg-slate-800'>
  <div class='container mx-auto px-4 grid md:grid-cols-2 gap-6'>
    <div>
      <p
        data-aos='fade-right'
        data-aos-duration='1000'
        class='text-white text-3xl xl:text-4xl font-extrabold'
      >
        {t('home.register_text')}
      </p>
    </div>
    <div
      data-aos='fade-up'
      data-aos-duration='1000'
      class='grid gap-6 place-items-center'
    >
      {
        /* <CounterDown
        client:only='react'
        dias={t('home.days')}
        horas={t('home.hours')}
        minutos={t('home.minutes')}
        segundos={t('home.seconds')}
      />
      
      
      <p class='text-white text-3xl font-bold'>{t('program.comming_soon')}</p>
      */
      }
      <div class='flex gap-5'>
        <a
          href={`${base}/#`}
          class='card p-5 hover:scale-105 ease-in-out duration-300'
        >
          <span class='text-white text-center z-10 font-extrabold text-2xl'>
            {t('home.free_register')}
          </span>
        </a>
      </div>
    </div>
  </div>
  {
    /* <div
    class='mt-20 container mx-auto py-5 px-4 backdrop-blur-sm bg-white/30 rounded-xl'
  >
    <Content />
  </div>
  */
  }
</section>
<style>
  .card {
    background: #f6f6f6;
    position: relative;
    display: flex;
    place-content: center;
    place-items: center;
    overflow: hidden;
    border-radius: 20px;
  }

  .card::before {
    content: '';
    position: absolute;

    background-image: linear-gradient(
      90deg,
      rgba(118, 110, 166) 0%,
      rgba(86, 80, 120) 100%
    );

    animation: rotBGimg 3s linear infinite;
    transition: all 0.2s linear;
  }

  @keyframes rotBGimg {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(360deg);
    }
  }

  .card::after {
    content: '';
    position: absolute;
    background-image: linear-gradient(
      90deg,
      rgba(118, 110, 166) 0%,
      rgba(86, 80, 120) 100%
    );
    inset: 5px;
    border-radius: 15px;
  }
