---
import i18next, { t } from 'i18next'
---

<section class='relative py-20'>
  <div class='container mx-auto px-4 my-10 relative'>
    <svg
      class='absolute left-0 top-0 h-full opacity-0 xl:opacity-80 overflow-auto hidden md:inline'
      viewBox='0 0 250 450'
      fill='none'
      xmlns='http://www.w3.org/2000/svg'
    >
      <defs>
        <linearGradient id='curveGradient' x1='0%' y1='0%' x2='100%' y2='100%'>
          <stop offset='0%' style='stop-color:#523899;stop-opacity:1'></stop>
          <stop offset='50%' style='stop-color:#3f28b6;stop-opacity:0.6'></stop>
          <stop offset='95%' style='stop-color:#ffffff;stop-opacity:0.3'></stop>
        </linearGradient>
      </defs>
      <!-- SemicÃ­rculo hacia la izquierda -->
      <path
        d='M 200 40 A 70 90 0 0 0 250 400'
        stroke='url(#curveGradient)'
        stroke-width='60'
        fill='none'
        stroke-linecap='round'></path>
    </svg>

    <div class='grid md:flex justify-center content-end gap-2'>
      <div class='grid gap-2'>
        <div class='flex max-w-2xl gap-2 mt-10 justify-center mx-auto'>
          <div
            data-aos='fade-up'
            data-aos-duration='1700'
            class='text-center rounded-tr-3xl rounded-3xl p-5 shadow-lg border-l-4 border-[#565078] bg-[#8F7FB7] text-white font-bold'
          >
            <img src='/img/iconsegmentos2.png' class='mx-auto mb-3 h-16' />
            <p class='font-extrabold text-2xl md:text-3xl'>+ 10,000</p>
            <p>{t('home.cifra_4')}</p>
          </div>

          <div
            data-aos='fade-up'
            data-aos-duration='1600'
            class='text-center rounded-tr-3xl rounded-3xl p-5 shadow-lg border-l-4 border-[#565078] bg-[#8F7FB7] text-white font-bold'
          >
            <img src='/img/iconsegmentos1.png' class='mx-auto mb-3 h-16' />
            <p class='font-extrabold text-2xl md:text-3xl'>
              + 15,000 {i18next.language === 'es' ? 'm2' : 'sqm'}
            </p>
            <p>
              {t('home.cifra_3')}
            </p>
          </div>
        </div>

        <div
          class='mt-2 max-w-2xl grid place-content-center grid-cols-2 mx-auto gap-2'
        >
          <div
            data-aos='fade-up'
            data-aos-duration='1800'
            class='grid place-items-center text-center rounded-tr-3xl rounded-3xl p-5 shadow-lg border-l-4 border-[#565078] bg-[#8F7FB7] text-white font-bold'
          >
            <div>
              <img src='/img/iconsegmentos3.png' class='mx-auto mb-3 h-16' />
              <p class='font-extrabold text-2xl md:text-3xl'>+ 250</p>
              <p>
                {t('home.cifra_5')}
              </p>
            </div>
          </div>

          <div class='grid gap-2'>
            <div
              data-aos='fade-up'
              data-aos-duration='2000'
              class='text-center rounded-tr-3xl rounded-3xl p-5 shadow-lg border-l-4 border-[#565078] bg-[#8F7FB7] text-white font-bold'
            >
              <img src='/img/iconsegmentos5.png' class='mx-auto mb-3 h-16' />
              <p class='font-extrabold text-2xl md:text-3xl'>+ 50</p>
              <p>{t('home.cifra_6')}</p>
            </div>
          </div>
        </div>

        <div
          data-aos='fade-up'
          data-aos-duration='2000'
          class='text-center rounded-tr-3xl rounded-3xl p-5 shadow-lg border-l-4 border-[#565078] bg-[#8F7FB7] text-white font-bold w-fit mx-auto'
        >
          <img src='/img/iconsegmentos4.png' class='mx-auto mb-3 h-16' />
          <p class='font-extrabold text-4xl opacity-0'>+</p>
          <p>{t('home.cifra_7')}</p>
        </div>
      </div>
    </div>
  </div>
</section>
