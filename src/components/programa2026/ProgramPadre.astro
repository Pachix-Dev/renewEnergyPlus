---
import i18next, { t, changeLanguage } from "i18next";
---

<section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-black py-20">

    <!-- Elementos decorativos de fondo mejorados -->
    <div class="pointer-events-none absolute inset-0">
        <div class="absolute left-1/4 top-20 h-[500px] w-[500px] rounded-full bg-gradient-to-br from-[#565078]/20 to-transparent blur-3xl"></div>
        <div class="absolute right-1/4 bottom-20 h-[500px] w-[500px] rounded-full bg-gradient-to-tl from-[#BC0100]/20 to-transparent blur-3xl"></div>
        <div class="absolute left-1/2 top-1/2 h-96 w-96 -translate-x-1/2 -translate-y-1/2 rounded-full bg-gradient-to-r from-[#D76901]/10 to-[#766EA6]/10 blur-3xl"></div>
    </div>

    <div class="container relative mx-auto px-4">

        <!-- Header mejorado -->
        <div class="mb-20 text-center" data-aos="fade-down" data-aos-duration="1000">
            <div class="mb-8 inline-flex items-center gap-3 rounded-full border border-white/10 bg-white/5 px-8 py-3 backdrop-blur-md">
                <span class="text-sm font-bold uppercase tracking-widest text-white">{t("program.text_program")} 2026</span>
            </div>
            
            <h1 class="mb-8 bg-gradient-to-r from-white via-gray-100 to-white bg-clip-text text-5xl font-black uppercase leading-tight text-transparent lg:text-6xl">
                {t("program.title_topics")}
            </h1>
            
            <p class="mx-auto max-w-2xl text-xl leading-relaxed text-gray-300">
                {t("program.subtitle_topics")}
            </p>
        </div>

        <!-- Layout con lÃ­nea divisoria central -->
        <div class="relative mx-auto max-w-7xl">

            <div class="grid gap-12 lg:grid-cols-2 lg:gap-8">
                
                <!-- Card 1: Enlightenment Area -->
                <article 
                    class="group relative"
                    data-aos="fade-right" 
                    data-aos-duration="1000" 
                    data-aos-delay="200"
                >
                    <!-- Card container -->
                    <div class="relative overflow-hidden rounded-3xl border border-[#565078]/30 bg-gradient-to-br from-gray-800/80 via-gray-900/90 to-black/80 p-10 shadow-2xl backdrop-blur-sm transition-all duration-700 hover:-translate-y-2 hover:shadow-[0_25px_60px_-15px_rgba(86,80,120,0.6)]">
                        
                        <!-- Glow effect -->
                        <div class="absolute -right-20 -top-20 h-60 w-60 rounded-full bg-gradient-to-br from-[#565078]/30 via-[#766EA6]/20 to-transparent blur-3xl transition-all duration-700 group-hover:scale-150 group-hover:opacity-100 opacity-70"></div>
                        
                        <!-- Shine effect -->
                        <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/5 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>

                        <div class="relative space-y-8">
                            <!-- Badge -->
                            <div class="inline-flex items-center gap-2 rounded-full border border-[#565078]/50 bg-[#565078]/10 px-5 py-2 backdrop-blur-sm">
                                <div class="h-2 w-2 animate-pulse rounded-full bg-[#766EA6]"></div>
                                <span class="text-xs font-bold uppercase tracking-wider text-[#766EA6]">{t("program.topic_subtitle_1")}</span>
                            </div>

                            <!-- Icon -->
                            <div class="flex h-20 w-20 items-center justify-center rounded-2xl bg-gradient-to-br from-[#565078] to-[#766EA6] shadow-lg shadow-[#565078]/50 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3">
                                <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                </svg>
                            </div>

                            <!-- Title -->
                            <div class="space-y-3">
                                <h3 class="text-4xl font-black uppercase leading-tight tracking-tight text-white lg:text-5xl">
                                    Enlightenment<br />
                                    <span class="bg-gradient-to-r from-[#565078] to-[#766EA6] bg-clip-text text-transparent">Area</span>
                                </h3>
                                <div class="h-1 w-16 rounded-full bg-gradient-to-r from-[#565078] to-[#766EA6]"></div>
                            </div>

                            <!-- Description -->
                            <p class="text-lg leading-relaxed text-gray-300">
                                {t("program.enlightenment_desc")}
                            </p>

                            <!-- CTA -->
                            <div class="pt-4">
                                <a 
                                    href="/enlightenment-program-2026" 
                                    class="group/btn inline-flex items-center gap-3 rounded-full bg-gradient-to-r from-[#565078] to-[#766EA6] px-8 py-4 text-base font-bold text-white shadow-lg shadow-[#565078]/40 transition-all duration-300 hover:shadow-[#565078]/60 hover:shadow-2xl"
                                >
                                    <span>{t("program.btn_program")}</span>
                                    <svg class="h-5 w-5 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Corner decoration -->
                        <div class="absolute bottom-0 right-0 h-32 w-32 translate-x-16 translate-y-16 rounded-full bg-gradient-to-tl from-[#565078]/20 to-transparent blur-2xl"></div>
                    </div>
                </article>

                <!-- Card 2: Installer & Innovation Area -->
                <article 
                    class="group relative"
                    data-aos="fade-left" 
                    data-aos-duration="1000" 
                    data-aos-delay="400"
                >
                    <!-- Card container -->
                    <div class="relative overflow-hidden rounded-3xl border border-[#BC0100]/30 bg-gradient-to-br from-gray-800/80 via-gray-900/90 to-black/80 p-10 shadow-2xl backdrop-blur-sm transition-all duration-700 hover:-translate-y-2 hover:shadow-[0_25px_60px_-15px_rgba(188,1,0,0.6)]">
                        
                        <!-- Glow effect -->
                        <div class="absolute -left-20 -top-20 h-60 w-60 rounded-full bg-gradient-to-bl from-[#BC0100]/30 via-[#D76901]/20 to-transparent blur-3xl transition-all duration-700 group-hover:scale-150 group-hover:opacity-100 opacity-70"></div>
                        
                        <!-- Shine effect -->
                        <div class="absolute inset-0 bg-gradient-to-tl from-transparent via-white/5 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>

                        <div class="relative space-y-8">
                            <!-- Badge -->
                            <div class="inline-flex items-center gap-2 rounded-full border border-[#BC0100]/50 bg-[#BC0100]/10 px-5 py-2 backdrop-blur-sm">
                                <div class="h-2 w-2 animate-pulse rounded-full bg-[#D76901]"></div>
                                <span class="text-xs font-bold uppercase tracking-wider text-[#D76901]"> {t("program.topic_subtitle_2")} </span>
                            </div>

                            <!-- Icon -->
                            <div class="flex h-20 w-20 items-center justify-center rounded-2xl bg-gradient-to-br from-[#BC0100] to-[#D76901] shadow-lg shadow-[#BC0100]/50 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3">
                                <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                                </svg>
                            </div>

                            <!-- Title -->
                            <div class="space-y-3">
                                <h3 class="text-4xl font-black uppercase leading-tight tracking-tight text-white lg:text-5xl">
                                    Installer &<br />
                                    <span class="bg-gradient-to-r from-[#BC0100] to-[#D76901] bg-clip-text text-transparent">Innovation Area</span>
                                </h3>
                                <div class="h-1 w-16 rounded-full bg-gradient-to-r from-[#BC0100] to-[#D76901]"></div>
                            </div>

                            <!-- Description -->
                            <p class="text-lg leading-relaxed text-gray-300">
                                {t("program.installer_desc")}
                            </p>

                            <!-- CTA -->
                            <div class="pt-4">
                                <a 
                                    href="/installer-innovation-program-2026" 
                                    class="group/btn inline-flex items-center gap-3 rounded-full bg-gradient-to-r from-[#BC0100] to-[#D76901] px-8 py-4 text-base font-bold text-white shadow-lg shadow-[#BC0100]/40 transition-all duration-300 hover:shadow-[#BC0100]/60 hover:shadow-2xl"
                                >
                                    <span>{t("program.btn_program")}</span>
                                    <svg class="h-5 w-5 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Corner decoration -->
                        <div class="absolute bottom-0 left-0 h-32 w-32 -translate-x-16 translate-y-16 rounded-full bg-gradient-to-tr from-[#BC0100]/20 to-transparent blur-2xl"></div>
                    </div>
                </article>

            </div>
        </div>
    </div>
</section>