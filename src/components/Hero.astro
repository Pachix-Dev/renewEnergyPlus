---
import i18next, { t } from "i18next";
const base = i18next.language === "es" ? "" : `/${i18next.language}`;
---

<section
  class="relative bg-no-repeat bg-cover min-h-[90vh] flex items-center justify-center py-10 px-2 overflow-hidden"
>
  <video
    src="/video/replusmexicobg.mp4"
    autoplay
    loop
    muted
    class="absolute inset-0 object-cover w-full h-full -z-10"></video>
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black/80 -z-10"
  >
  </div>
  <div
    class="container mx-auto flex flex-col md:flex-row items-center justify-between gap-10 relative z-10 sm:w-[1400px] px-6 py-10"
  >
    {/* Columna izquierda: Branding y datos */}
    <div
      class="flex-1 flex flex-col items-center md:items-start text-center md:text-left gap-4"
    >
      <div
        class="w-full p-6 md:p-10 flex flex-col items-center md:items-start text-center md:text-left gap-2"
        data-aos="fade-right"
        data-aos-duration="1200"
      >
        <img
          src="/img/logoREPLUS.webp"
          alt="REPLUS MEXICO"
          class="logoREPLUS w-44 lg:w-64 mx-auto md:mx-0 mb-2"
        />
        <p
          class="font-[Tungsten-Medium] text-white text-4xl md:text-4xl lg:text-5xl uppercase font-extrabold drop-shadow-lg tracking-wide bg-gradient-to-r from-sky-400 via-blue-500 to-indigo-600 bg-clip-text text-transparent"
        >
          {t("home.slogan")}
        </p>
        <p
          class="font-[Tungsten-Medium] text-white text-4xl md:text-4xl lg:text-5xl drop-shadow"
        >
          <span class="inline-block px-3 py-1 rounded-xl text-sky-300"
            >{t("home.event-date")}</span
          >
          <span class="text-yellow-300">| 2026</span>
        </p>
        <p
          class="font-[Tungsten-Medium] text-white text-4xl md:text-4xl lg:text-4xl drop-shadow mb-2"
        >
          <span class="inline-block px-3 py-1 text-yellow-200"
            >EXPO GUADALAJARA, JALISCO</span>
        </p>
        <img
          src="/img/logosOrganizado.webp"
          class="mt-3 w-[280px] md:w-[240px] lg:w-[340px] mx-auto md:mx-0"
        />
      </div>
    </div>
    {/* Columna derecha: Botón de registro y acciones */}
    <div class="flex-1 flex flex-col items-center justify-center gap-8">
      {/* Botón de registro gratuito destacado */}
      <div class="group relative" data-aos="zoom-in" data-aos-duration="1200">
        <a
          href={`${base}/registro`}
          target="_blank"
          class="relative w-full flex items-center justify-center gap-4 px-8 py-6 rounded-2xl bg-gradient-to-r from-sky-400 via-blue-500 to-indigo-600 border-4 border-blue-400 shadow-[0_8px_32px_0_rgba(56,189,248,0.25)] text-white text-2xl lg:text-3xl uppercase font-extrabold transition-all duration-300 hover:bg-blue-600 hover:text-white hover:scale-105 focus:ring-4 focus:ring-blue-200 focus:outline-none group overflow-hidden"
        >
          <span
            class="absolute inset-0 rounded-2xl border-4 border-blue-400 animate-[border-glow-blue_2s_linear_infinite] pointer-events-none"
          ></span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-9 w-9 text-sky-200 drop-shadow-lg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
            ></path>
          </svg>
          <span
            class="font-bold tracking-widest drop-shadow-lg z-10 text-sm sm:text-xl"
            >{t("home.free_register")}</span
          >
        </a>
      </div>
      {/* Otros botones de acción */}
      <div class="flex flex-col sm:flex-row sm:justify-between gap-5 w-full">
        {/* Botón: Programa Premium - lleva a /programa-premium */}
        <div class="w-full group relative">
          <a
            href={`${base}/programa-premium`}
            class="button text-white text-lg lg:text-2xl uppercase relative z-10 font-extrabold"
          >
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                ></path>
              </svg>
              <span class="font-bold text-lg">{t("program.title_1")}</span>
            </div>
          </a>
          <div
            class="relative -top-8 transform mt-2 bg-[#2D315F] text-white text-center text-sm px-4 pt-10 rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition pb-2"
          >
            {t("home.text_button_program")}
          </div>
        </div>
        {/* Botón: Experiencia Premium - lleva a /experiencia-premium */}
        <div class="w-full group relative">
          <a
            href={`${base}/programa-premium`}
            class="button bg-gradient-to-r from-yellow-400 via-yellow-500 to-yellow-600 text-[#2D315F] text-lg lg:text-2xl uppercase relative z-10 font-extrabold border-yellow-400 hover:from-yellow-500 hover:to-yellow-700"
          >
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="#ffffff"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-party-popper-icon lucide-party-popper"
                ><path d="M5.8 11.3 2 22l10.7-3.79"></path><path d="M4 3h.01"
                ></path><path d="M22 8h.01"></path><path d="M15 2h.01"
                ></path><path d="M22 20h.01"></path><path
                  d="m22 2-2.24.75a2.9 2.9 0 0 0-1.96 3.12c.1.86-.57 1.63-1.45 1.63h-.38c-.86 0-1.6.6-1.76 1.44L14 10"
                ></path><path
                  d="m22 13-.82-.33c-.86-.34-1.82.2-1.98 1.11c-.11.7-.72 1.22-1.43 1.22H17"
                ></path><path
                  d="m11 2 .33.82c.34.86-.2 1.82-1.11 1.98C9.52 4.9 9 5.52 9 6.23V7"
                ></path><path
                  d="M11 13c1.93 1.93 2.83 4.17 2 5-.83.83-3.07-.07-5-2-1.93-1.93-2.83-4.17-2-5 .83-.83 3.07.07 5 2Z"
                ></path></svg
              >
              <span class="font-bold text-lg uppercase">{t("home.title_experience_premium")}</span>
            </div>
          </a>
          <div
            class="relative -top-8 transform bg-[#2D315F] text-white text-center text-sm px-4 pt-10 rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition pb-2"
          >
            {t("home.description_experience_premium")}
          </div>
        </div>
        {/* Botón: Energy Night - lleva a /energy-night */}
        <div class="w-full group relative">
          <a
            href={`${base}/energy-night`}
            class="button text-white text-lg lg:text-2xl uppercase relative z-10 font-extrabold"
          >
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                ></path>
              </svg>
              <span class="font-bold text-lg">ENERGY NIGHT</span>
            </div>
          </a>
          <div
            class="relative -top-8 transform bg-[#2D315F] text-white text-center text-sm px-4 pt-10 rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition pb-2"
          >
            {t("home.text_button_energy")}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .button {
    position: relative;
    transition: all 0.3s ease-in-out;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    padding-block: 1rem;
    padding-inline: 1.25rem;
    background: #4e549f;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    gap: 10px;
    border: 3px solid #ffffff4d;
    outline: none;
    overflow: hidden;
  }

  .button:hover {
    transform: scale(0.85);
    border-color: #fff9;
  }

  .button:hover .icon {
    transform: translate(4px);
  }

  .button:hover::before {
    animation: shine 1.5s ease-out infinite;
  }

  .button::before {
    content: "";
    position: absolute;
    width: 100px;
    height: 100%;
    background-image: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0) 30%,
      rgba(255, 255, 255, 0.8),
      rgba(255, 255, 255, 0) 70%
    );
    top: 0;
    left: -100px;
    opacity: 0.6;
  }

  p {
    text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.8);
  }

  span {
    color: white;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: white;
  }
  .logoREPLUS {
    filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.8));
  }

  @keyframes shine {
    0% {
      left: -100px;
    }

    60% {
      left: 100%;
    }

    to {
      left: 100%;
    }
  }
  @keyframes border-glow-blue {
    0% {
      box-shadow:
        0 0 0 0 #38bdf8,
        0 0 0 0 #fff;
    }
    50% {
      box-shadow:
        0 0 24px 8px #38bdf8,
        0 0 12px 4px #fff;
    }
    100% {
      box-shadow:
        0 0 0 0 #38bdf8,
        0 0 0 0 #fff;
    }
  }
</style>
