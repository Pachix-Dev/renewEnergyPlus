    <div
      data-aos='fade-up'
      data-aos-duration='1300'
      class='bg-[#9F96BF] rounded-3xl shadow-lg text-white relative'
    >
      <div class='grid xl:grid-cols-2 xl:h-96 justify-center'>
        <div
          class='py-10 2xl:py-20 px-4 flex flex-col items-center justify-between'
        >
          <h5
            class='text-3xl font-extrabold text-center'
            set:html={t(`home.rates.item2.title1`)}
          />
          <div class='text-center'>
            <p class='text-2xl'>{t(`home.rates.item2.price2-title`)}</p>
            <hr />
            <p class='text-3xl font-semibold'>USD 515.00 +</p>
            <span class='ms-1 text-xl font-normal'
              >{t(`home.rates.item2.price1`)}</span
            >
          </div>
        </div>
        <img
          src='/img/stand_2.webp'
          alt='stand espacio libre'
          class='w-80 xl:absolute -top-6 -right-6 drop-shadow-2xl'
        />
      </div>
      <div class='p-4 text-center'>
        <p class='text-xl font-bold'>
          {t('home.rates.item2.title2')}
