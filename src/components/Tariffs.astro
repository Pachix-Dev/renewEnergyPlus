  <div
    class='mt-10 container mx-auto px-4 flex justify-center gap-5 text-[5px] xl:text-lg'
    data-aos='fade-up'
    data-aos-duration='1300'
  >
    <a
      href={i18next.language === 'es'
        ? '/doc/RE-FS-2026-ESP-V2_compressed.pdf'
        : '/doc/RE-FS-2026-ENG-V2_compressed.pdf'}
      target='_blank'
      class='button w-fit py-4 text-white uppercase'
    >
      <span>{t('menu.submenu_2.option_6')}</span>
    </a>
    <a
      href='/doc/RE-MEX-2026-100625-Model-1.pdf'
      target='_blank'
      class='button w-fit py-4 text-white uppercase'
    >
      {t('menu.submenu_2.option_8')}
    </a>
  </div>
</section>

<style>
  .button {
    position: relative;
    transition: all 0.3s ease-in-out;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    padding-block: 1rem;
    padding-inline: 1.25rem;
    background: rgb(118, 110, 166);
    background: linear-gradient(
      90deg,
      rgba(118, 110, 166) 0%,
      rgba(86, 80, 120) 100%
    );
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    gap: 10px;
    font-weight: bold;
    border: 3px solid #ffffff4d;
    outline: none;
    overflow: hidden;
    font-size: 15px;
  }

  .icon {
    width: 24px;
    height: 24px;
    transition: all 0.3s ease-in-out;
  }

  .button:hover {
    transform: scale(1.05);
    border-color: #fff9;
  }

  .button:hover .icon {
    transform: translate(4px);
  }

  .button:hover::before {
    animation: shine 1.5s ease-out infinite;
  }

  .button::before {
    content: '';
    position: absolute;
    width: 100px;
    height: 100%;
    background-image: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0) 30%,
      rgba(255, 255, 255, 0.8),
      rgba(255, 255, 255, 0) 70%
    );
    top: 0;
    left: -100px;
    opacity: 0.6;
  }

  @keyframes shine {
    0% {
      left: -100px;
    }

    60% {
      left: 100%;
    }

    to {
      left: 100%;
    }
  }
</style>
